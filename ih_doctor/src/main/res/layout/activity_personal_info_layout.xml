<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />

    <com.ganxin.library.LoadDataLayout
        android:id="@+id/loadDataLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/common_bottom_line_bg"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/point_red"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="头像:"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.CircleImageView
                    android:id="@+id/user_icon"
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_38"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:scaleType="fitXY"/>
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/common_bottom_line_bg"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/user_name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/point_orange"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="姓名:"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/user_name_tip"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="请输入姓名"
                    android:paddingRight="@dimen/dp_20"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_fuc" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/common_bottom_line_bg"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/point_yellow"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="性别:"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:hint="请选择"
                    android:paddingRight="@dimen/dp_20"
                    android:textSize="@dimen/font_size_fuc" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/common_bottom_line_bg"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/point_orange"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="实名认证:"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/real_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/arrow_right_grey"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical|right"
                    android:hint="身份认证"
                    android:textSize="@dimen/font_size_primary" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/common_bottom_line_bg"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/point_green"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="执业医师资格证:"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <ImageView
                    android:id="@+id/certificate_img"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/certificate"
                    android:gravity="center_vertical|right"
                    android:padding="@dimen/dp_8"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/arrow_right_grey"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical|right"
                    android:hint="请上传执业医师资格证"
                    android:textSize="@dimen/font_size_primary" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/common_bottom_line_bg"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/point_blue"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="医院:"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/arrow_right_grey"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical|right"
                    android:hint="选择医院"
                    android:textSize="@dimen/font_size_primary" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/common_bottom_line_bg"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/point_purple"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="科室:"
                    android:id="@+id/dept_group"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/dept"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_alignParentRight="true"
                    android:paddingLeft="@dimen/dp_12"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/dept_group"
                    android:drawableRight="@mipmap/arrow_right_grey"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center_vertical|right"
                    android:textSize="@dimen/font_size_primary" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/common_bottom_line_bg"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/good_be_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/point_purple_blue"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="擅长:"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/good_be"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/good_be_tip"
                    android:drawableRight="@mipmap/arrow_right_grey"
                    android:drawablePadding="@dimen/dp_8"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="输入擅长"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_primary" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_46"
                android:background="@drawable/common_bottom_line_bg"
                android:paddingLeft="@dimen/dp_30"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/dec_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/point_black"
                    android:drawablePadding="@dimen/dp_12"
                    android:text="简介:"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/dec"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/dec_tip"
                    android:drawableRight="@mipmap/arrow_right_grey"
                    android:drawablePadding="@dimen/dp_8"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="输入简介"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_primary" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="@dimen/dp_260"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_10">

                <Button
                    android:id="@+id/finish"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="@dimen/dp_260"
                    android:layout_height="@dimen/dp_53"
                    android:background="@drawable/login_btn"
                    android:gravity="center"
                    android:text="完成"
                    android:textColor="@color/primary_bg_color"
                    android:textSize="@dimen/dp_17"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>
    </com.ganxin.library.LoadDataLayout>
</LinearLayout>