<?xml version="1.0" encoding="utf-8"?>
<com.keydom.mianren.ih_doctor.view.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/notification_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_white_click_bg"
        android:paddingLeft="@dimen/padding_left_right_dp"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/padding_left_right_dp">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/notification_nomal" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/notification_icon"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_15">

            <TextView
                android:id="@+id/notification_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_15"
                android:text="医院通知"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_size_fuc" />

            <TextView
                android:id="@+id/notification_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_9"
                android:layout_toRightOf="@id/notification_name"
                android:background="@drawable/audit_working"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:text="审核中"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_toRightOf="@id/notification_name"
                android:gravity="right"
                android:text="2018.10.20"
                android:textColor="@color/fontColorDirection"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/notification_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/notification_name"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_8"
                android:ellipsize="none"
                android:singleLine="true"
                android:text="目前我院成都市第一人民医院北区，周五上午在门诊部大楼7楼20号诊室看特需门诊，可以网上预约或直接来医院就诊。"
                android:textColor="@color/fontColorDirection"
                android:textSize="@dimen/font_size_auxiliary" />


            <TextView
                android:id="@+id/feedback_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/notification_dec"
                android:layout_alignLeft="@id/notification_dec"
                android:layout_marginTop="@dimen/dp_10"
                android:background="#F9F9F9"
                android:lineSpacingExtra="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:text="本条信息含有本院未经发布的过敏名单，请适当编辑后，隐藏相关信息在进行发布"
                android:textColor="#777777"
                android:textSize="@dimen/font_size_auxiliary"
                android:visibility="gone" />


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/update"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_mark"
            android:text="修改"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />
        <Button
            android:id="@+id/delete"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_delete"
            android:text="删除"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>


</com.keydom.mianren.ih_doctor.view.SwipeItemLayout>