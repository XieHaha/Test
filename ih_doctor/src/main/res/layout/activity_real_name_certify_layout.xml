<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@drawable/common_bottom_line_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/padding_left_right_dp">

        <TextView
            android:id="@+id/phone_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/point_orange"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="center_vertical"
            android:text="电话号码:"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary" />

        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/phone_tip"
            android:layout_weight="1"
            android:background="@null"
            android:maxLength="15"
            android:textCursorDrawable="@null"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:hint="请输入电话号码"
            android:paddingLeft="@dimen/dp_16"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:layout_gravity="center_vertical"
        android:background="@drawable/common_bottom_line_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/padding_left_right_dp">

        <TextView
            android:id="@+id/code_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/point_red"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="center_vertical"
            android:text="验证码:"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.keydom.ih_common.view.InterceptorEditText
                android:id="@+id/code_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/phone_tip"
                android:layout_weight="1"
                android:background="@null"
                android:maxLength="10"
                android:drawablePadding="@dimen/dp_8"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:textCursorDrawable="@null"
                android:paddingLeft="@dimen/dp_16"
                android:textColor="@color/edit_font_color"
                android:textSize="@dimen/font_size_primary" />

            <com.keydom.ih_common.view.MButton
                android:id="@+id/get_identifying_code_bt"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_37"
                android:layout_marginTop="@dimen/dp_4"
                android:layout_marginBottom="@dimen/dp_4"
                android:layout_weight="1.4"
                android:background="@drawable/login_btn"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/get_identifying_code"
                android:textColor="@color/primary_bg_color"
                android:textSize="@dimen/dp_11" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@drawable/common_bottom_line_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/padding_left_right_dp">

        <TextView
            android:id="@+id/name_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/point_blue"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="center_vertical"
            android:text="姓名:"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary" />

        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/phone_tip"
            android:layout_weight="1"
            android:background="@null"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center_vertical"
            android:maxLength="10"
            android:textCursorDrawable="@null"
            android:hint="请输入姓名"
            android:paddingLeft="@dimen/dp_16"
            android:textColor="@color/edit_font_color"
            android:textSize="@dimen/font_size_primary" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_46"
        android:background="@drawable/common_bottom_line_bg"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_30"
        android:paddingRight="@dimen/padding_left_right_dp">

        <TextView
            android:id="@+id/id_card_tip"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_weight="2"
            android:drawableLeft="@mipmap/point_green"
            android:drawablePadding="@dimen/dp_12"
            android:gravity="center_vertical"
            android:text="身份证号码:"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary" />

        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/id_card_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/phone_tip"
            android:layout_weight="1"
            android:background="@null"
            android:maxLength="20"
            android:drawablePadding="@dimen/dp_8"
            android:textCursorDrawable="@null"
            android:gravity="center_vertical"
            android:hint="请输入身份证号码"
            android:paddingLeft="@dimen/dp_16"
            android:textColor="@color/edit_font_color"
            android:textSize="@dimen/font_size_primary" />
    </LinearLayout>
</LinearLayout>