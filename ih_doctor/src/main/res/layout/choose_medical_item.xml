<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prient_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_19"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_19"
    android:paddingBottom="@dimen/dp_20"
    android:background="@drawable/white_corner_bg">

    <TextView
        android:id="@+id/medical_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_25"
        android:drawableLeft="@mipmap/point_green"
        android:drawablePadding="@dimen/dp_10"
        android:text="双黄连口服液"
        android:textColor="#333333"
        android:textSize="@dimen/font_size_primary" />

    <TextView
        android:id="@+id/medical_spec_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medical_name_tv"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_10"
        android:text="规格：10ml*10支/盒"
        android:textColor="#666666"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/medical_usage_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medical_spec_tv"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_8"
        android:text="口服，一次2支，一日3次，儿童酌减或遵医嘱。"
        android:textColor="#666666"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/medical_vender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medical_usage_tv"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_20"
        android:text="广东康美药业有限公司"
        android:textColor="#BBBBBB"
        android:textSize="@dimen/font_size_primary" />

    <ImageView
        android:id="@+id/select_img"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_13"
        android:src="@mipmap/nursing_project_unselect" />
</RelativeLayout>