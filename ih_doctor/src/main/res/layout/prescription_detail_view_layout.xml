<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_left_right_dp"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_marginRight="@dimen/padding_left_right_dp"
        android:layout_marginBottom="@dimen/dp_28"
        android:background="@drawable/prescription_box_bg"
        android:paddingLeft="@dimen/padding_left_right_dp"
        android:paddingRight="@dimen/padding_left_right_dp"
        android:paddingBottom="@dimen/dp_58">

        <TableRow android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingTop="@dimen/dp_13">
                <TextView
                    android:id="@+id/prescription_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#333333"
                    android:text="处方一" />

                <TextView
                    android:id="@+id/prescription_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/perscription_type_bg"
                    android:gravity="center_horizontal"
                    android:maxEms="4"
                    android:paddingLeft="@dimen/dp_6"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingRight="@dimen/dp_6"
                    android:paddingBottom="@dimen/dp_4"
                    android:text="儿童药品处方" />
            </RelativeLayout>
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="成都市第一人民医院处方笺"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_size_title"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:paddingTop="@dimen/dp_30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="NO："
                        android:textColor="#666666"
                        android:textSize="@dimen/font_size_auxiliary" />

                    <TextView
                        android:id="@+id/number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/prescription_info_bg"
                        android:gravity="left"
                        android:text="2018-11-02 13:27:35"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_auxiliary"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="开方日期："
                        android:textColor="#666666"
                        android:textSize="@dimen/font_size_auxiliary" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/prescription_info_bg"
                        android:gravity="left"
                        android:text="2018-11-02"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_auxiliary"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>

        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp_12">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="姓名："
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prescription_info_bg"
                    android:gravity="center_horizontal"
                    android:text="罗明"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="性别："
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/user_sex"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prescription_info_bg"
                    android:gravity="center_horizontal"
                    android:text="男"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="年龄："
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/user_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prescription_info_bg"
                    android:gravity="center_horizontal"
                    android:text="21"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />

            </LinearLayout>

        </TableRow>


        <TableRow android:paddingTop="@dimen/dp_12">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="门诊(住院)病历号："
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/case_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prescription_info_bg"
                    android:gravity="left"
                    android:text="N360214568"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="科室："
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/dept_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prescription_info_bg"
                    android:gravity="center_horizontal"
                    android:text="妇科"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />

            </LinearLayout>


        </TableRow>


        <TableRow android:paddingTop="@dimen/dp_12">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="电话："
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/phone_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prescription_info_bg"
                    android:gravity="left"
                    android:text="15108228866"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="费别："
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/fee_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prescription_info_bg"
                    android:gravity="center_horizontal"
                    android:text="处方"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableRow>

        <TableRow android:paddingTop="@dimen/dp_12">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="地址："
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prescription_info_bg"
                    android:gravity="left"
                    android:text="成都市天府软件园C区"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />
            </LinearLayout>
        </TableRow>

        <TableRow android:paddingTop="@dimen/dp_12">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="临床（初步诊断）："
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/diagnose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/prescription_info_bg"
                    android:gravity="left"
                    android:text="心肌梗死、没几天了"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />
            </LinearLayout>

        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Rp"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/dp_17"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_marginTop="@dimen/dp_13">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/medicine_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </android.support.v7.widget.RecyclerView>
        </TableRow>

        <TableRow android:paddingTop="@dimen/dp_45">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/doctor_name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:gravity="center_horizontal"
                    android:text="医师："
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/doctor_name_tip"
                    android:layout_alignBottom="@id/doctor_name_tip"
                    android:layout_toRightOf="@id/doctor_name_tip"
                    android:gravity="left"
                    android:text="王建安"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/doctor_sign"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignTop="@id/doctor_name"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_m_30"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_toRightOf="@id/doctor_name"
                    android:scaleType="fitStart" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_10">

                    <TextView
                        android:id="@+id/check_doctor_name_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="审核："
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_auxiliary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/check_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/check_doctor_name_tip"
                        android:layout_alignBottom="@id/check_doctor_name_tip"
                        android:layout_toRightOf="@id/check_doctor_name_tip"
                        android:gravity="center"
                        android:text="王建安"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_auxiliary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/send_doctor_name_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/check_doctor_name_tip"
                        android:gravity="center_horizontal"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:text="核对、发药："
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_auxiliary"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/send_doctor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/send_doctor_name_tip"
                        android:layout_alignBottom="@id/send_doctor_name_tip"
                        android:layout_toRightOf="@id/send_doctor_name_tip"
                        android:gravity="center"
                        android:text="王建安"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_auxiliary"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

        </TableRow>

    </TableLayout>
</RelativeLayout>
