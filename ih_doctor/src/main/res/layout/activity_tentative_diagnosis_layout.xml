<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F9F9F9" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/common_bottom_line_bg"
        android:paddingRight="@dimen/padding_left_right_dp">

        <TextView
            android:id="@+id/patient_name_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/point_purple_blue"
            android:drawablePadding="@dimen/dp_13"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_28"
            android:paddingTop="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_24"
            android:text="选择患者："
            android:textColor="@color/fontColorPrimary"
            android:textSize="@dimen/font_size_primary" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/patient_name"
            android:layout_toRightOf="@id/patient_name_tip"
            android:gravity="center_vertical"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="12dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/patient_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>
        <!--<com.keydom.mianren.ih_doctor.view.SelectFlowLayout-->
        <!--android:id="@+id/patient_box"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toLeftOf="@id/patient_name"-->
        <!--android:layout_toRightOf="@id/patient_name_tip"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="@dimen/dp_12"-->
        <!--android:paddingRight="12dp"></com.keydom.mianren.ih_doctor.view.SelectFlowLayout>-->

        <TextView
            android:id="@+id/patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/arrow_right_grey"
            android:drawablePadding="@dimen/dp_12"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="请选择患者"
            android:paddingTop="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_24"
            android:singleLine="true"
            android:textColor="@color/fontColorDirection"
            android:textSize="@dimen/font_size_primary" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_bottom_line_bg"
        android:gravity="center_vertical"
        android:paddingRight="@dimen/padding_left_right_dp">

        <TextView
            android:id="@+id/group_doctor_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:drawableLeft="@mipmap/point_green"
            android:drawablePadding="@dimen/dp_13"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_28"
            android:paddingTop="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_24"
            android:text="选择医生："
            android:textColor="@color/fontColorPrimary"
            android:textSize="@dimen/font_size_primary" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/group_doctor"
            android:layout_toRightOf="@id/group_doctor_tip"
            android:gravity="center_vertical"
            android:overScrollMode="never"
            android:paddingLeft="@dimen/dp_12"
            android:paddingRight="12dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/doctor_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>

        <!--<com.keydom.mianren.ih_doctor.view.SelectFlowLayout-->
        <!--android:id="@+id/doctor_box"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerVertical="true"-->
        <!--android:layout_toLeftOf="@id/group_doctor"-->
        <!--android:layout_toRightOf="@id/group_doctor_tip"-->
        <!--android:gravity="center_vertical"-->
        <!--android:paddingLeft="@dimen/dp_12"-->
        <!--android:paddingRight="12dp">-->

        <!--</com.keydom.mianren.ih_doctor.view.SelectFlowLayout>-->

        <TextView
            android:id="@+id/group_doctor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/arrow_right_grey"
            android:drawablePadding="@dimen/dp_12"
            android:ellipsize="end"
            android:gravity="right"
            android:hint="请选择团队成员"
            android:paddingTop="@dimen/dp_24"
            android:paddingBottom="@dimen/dp_24"
            android:singleLine="true"
            android:textColor="@color/fontColorDirection"
            android:textSize="@dimen/font_size_primary" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_129">

        <TextView
            android:id="@+id/chooser_permission_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:drawableLeft="@mipmap/point_purple"
            android:drawablePadding="@dimen/dp_13"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_28"
            android:text="权限选择"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_primary" />

        <CheckBox
            android:id="@+id/back_visit_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/chooser_permission_label"
            android:button="@drawable/check_box_style"
            android:paddingLeft="@dimen/dp_10"
            android:text="回访"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary" />

        <LinearLayout
            android:id="@+id/back_visit_sacler"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_31"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@+id/back_visit_ck"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/back_visit_scaler_minus_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/scaler_minus_bg">

                <View
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_2"
                    android:layout_centerInParent="true"
                    android:background="#999999" />
            </RelativeLayout>

            <TextView
                android:id="@+id/back_visit_scaler_text_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/scaler_text_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="#666666"
                android:textSize="@dimen/dp_17" />

            <RelativeLayout
                android:id="@+id/back_visit_scaler_add_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/scaler_add_bg">

                <View
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_2"
                    android:layout_centerInParent="true"
                    android:background="#FFFFFF" />

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_12"
                    android:layout_centerInParent="true"
                    android:background="#FFFFFF" />
            </RelativeLayout>
        </LinearLayout>

        <CheckBox
            android:id="@+id/inquiry_ck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_visit_ck"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_toRightOf="@+id/chooser_permission_label"
            android:button="@drawable/check_box_style"
            android:paddingLeft="@dimen/dp_10"
            android:text="问诊"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary" />

        <LinearLayout
            android:id="@+id/inquiry_sacler"
            android:layout_width="@dimen/dp_96"
            android:layout_height="@dimen/dp_31"
            android:layout_below="@+id/back_visit_ck"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_22"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_toRightOf="@+id/inquiry_ck"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/inquiry_scaler_minus_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/scaler_minus_bg">

                <View
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_2"
                    android:layout_centerInParent="true"
                    android:background="#999999" />
            </RelativeLayout>

            <TextView
                android:id="@+id/inquiry_scaler_text_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="@drawable/scaler_text_bg"
                android:gravity="center"
                android:text="1"
                android:textColor="#666666"
                android:textSize="@dimen/dp_17" />

            <RelativeLayout
                android:id="@+id/inquiry_scaler_add_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/scaler_add_bg">

                <View
                    android:layout_width="@dimen/dp_12"
                    android:layout_height="@dimen/dp_2"
                    android:layout_centerInParent="true"
                    android:background="#FFFFFF" />

                <View
                    android:layout_width="@dimen/dp_2"
                    android:layout_height="@dimen/dp_12"
                    android:layout_centerInParent="true"
                    android:background="#FFFFFF" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/inquiry_sacler"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginEnd="@dimen/dp_26"
            android:text="问诊先后为自动换诊默认顺序"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/dp_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/point_yellow"
            android:drawablePadding="@dimen/dp_13"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_28"
            android:text="有效期"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_primary" />

        <TextView
            android:id="@+id/choose_term_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/consulting_arraw_right"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center_vertical|right"
            android:paddingRight="@dimen/dp_31"
            android:text="无限期"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_57">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/point_red"
            android:drawablePadding="@dimen/dp_13"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_28"
            android:text="关闭权限"
            android:textColor="#333333"
            android:textSize="@dimen/font_size_primary" />

        <com.keydom.ih_common.view.SwitchButton
            android:id="@+id/auth_switch"
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_35"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_30"
            android:padding="@dimen/dp_10" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE" />
</LinearLayout>