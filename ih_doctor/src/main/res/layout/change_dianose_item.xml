<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left_right_dp"
        android:paddingRight="@dimen/padding_left_right_dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_19"
            android:paddingBottom="@dimen/dp_19">

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:drawableLeft="@mipmap/point_purple_blue"
                android:drawablePadding="@dimen/dp_14"
                android:text="2018.10.19 "
                android:textColor="@color/fontColorPrimary"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/diagnose_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/patient_cicle_blue"
                android:text="待接收"
                android:textSize="@dimen/font_size_primary" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_18">

            <TextView
                android:id="@+id/user_name_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="患者信息："
                android:textColor="#999999"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/user_name_tip"
                android:layout_toRightOf="@id/user_name_tip"
                android:paddingLeft="@dimen/dp_10"
                android:text="苏慕橙、男、24岁"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_size_auxiliary" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:paddingLeft="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_18">

            <TextView
                android:id="@+id/diagnose_dec_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转诊说明："
                android:textColor="#999999"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/diagnose_dec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/diagnose_dec_tip"
                android:layout_toRightOf="@id/diagnose_dec_tip"
                android:lineSpacingExtra="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_10"
                android:text="患者目前咳嗽、咳痰2周，怀疑感染结核分支杆菌，现转您处，请处理。"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_size_auxiliary" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_18">

            <TextView
                android:id="@+id/apply_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/point_green"
                android:drawablePadding="@dimen/dp_15"
                android:text="申请："
                android:textColor="#999999"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/apply_tip"
                android:layout_toRightOf="@id/apply_tip"
                android:paddingLeft="@dimen/dp_10"
                android:text="唐林、主任医师、妇科"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_size_auxiliary" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_16"
            android:paddingTop="@dimen/dp_18"
            android:paddingBottom="@dimen/dp_18">

            <TextView
                android:id="@+id/receive_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/point_red"
                android:drawablePadding="@dimen/dp_15"
                android:text="接收："
                android:textColor="#999999"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/receive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/receive_tip"
                android:layout_toRightOf="@id/receive_tip"
                android:paddingLeft="@dimen/dp_10"
                android:text="刘辉、专家医生、胸腔科"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_size_auxiliary" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />
</LinearLayout>