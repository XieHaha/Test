<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />

    <!--<com.ganxin.library.LoadDataLayout-->
    <!--android:id="@+id/loadDataLayout"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->

    <com.keydom.ih_common.view.AnimationScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25"
                android:gravity="center_horizontal"
                android:text="成都市第一人民医院"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_13"
                android:gravity="center_horizontal"
                android:text="门诊病历记录"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_20"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/padding_left_right_dp"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/padding_left_right_dp"
                android:background="#F9F9F9"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingTop="@dimen/dp_13"
                android:paddingRight="@dimen/padding_left_right_dp"
                android:paddingBottom="@dimen/dp_13">

                <TextView
                    android:id="@+id/department_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:ellipsize="end"
                    android:maxWidth="@dimen/dp_180"
                    android:singleLine="true"
                    android:text="科别：呼吸内科"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />


                <TextView
                    android:id="@+id/time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/department_tv"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxWidth="@dimen/dp_180"
                    android:singleLine="true"
                    android:text="日期：2018-09-12"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/dotted_line_bg"
                android:layerType="software" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_24"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingRight="@dimen/padding_left_right_dp">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true">

                    <TextView
                        android:id="@+id/user_name_tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名:"
                        android:textColor="#BBBBBB"
                        android:textSize="@dimen/font_size_primary" />

                    <TextView
                        android:id="@+id/user_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_toRightOf="@id/user_name_tv_tip"
                        android:singleLine="true"
                        android:maxWidth="@dimen/dp_80"
                        android:ellipsize="end"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_primary"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/user_age_tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年龄:"
                        android:textColor="#BBBBBB"
                        android:textSize="@dimen/font_size_primary" />

                    <TextView
                        android:id="@+id/user_age_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_toRightOf="@id/user_age_tv_tip"
                        android:text="20"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_primary"
                        android:textStyle="bold" />
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_20">

                    <TextView
                        android:id="@+id/user_sex_tv_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性别:"
                        android:textColor="#BBBBBB"
                        android:textSize="@dimen/font_size_primary" />

                    <TextView
                        android:id="@+id/user_sex_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_8"
                        android:layout_toRightOf="@id/user_sex_tv_tip"
                        android:text="男"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_primary"
                        android:textStyle="bold" />
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_31"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/main_dec_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="主诉："
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/main_dec"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="咳嗽3天伴有发热1天"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_31"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/disease_history_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="现病史："
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/disease_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="患者3日前自觉鼻塞、流涕，轻微咳嗽，自服抗感冒药物效果不佳，近1日觉畏寒，发热，体温37.7℃。遂来本院就诊"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_31"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/oversensitive_history_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="过敏史："
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/oversensitive_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="花粉过敏、花生过敏、豆类过敏"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_31"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/auxiliary_check_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="辅助检查："
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/auxiliary_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="患者神清，查咽喉部红肿，扁桃腺（－）双肺呼吸音清，心脏听诊无异常，腹检无异常。血象WBC正常，L稍高。余（－）。"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_31"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/diagnose_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="诊断："
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/diagnose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="上呼吸道感染（感冒）"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_31"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/deal_with_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="处理："
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/deal_with"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="利巴韦林5片/次，3次/日含化；VC银翘片3片/次，3次/日；板蓝根15g/次，3次/日；复方川贝精片4片/次，3次/日；尼美"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_43"
                android:layout_marginBottom="@dimen/dp_70"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingRight="@dimen/padding_left_right_dp">

                <TextView
                    android:id="@+id/doctor_name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="医师："
                    android:textColor="#3F98F7"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/doctor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/doctor_name_tip"
                    android:text="唐季礼"
                    android:textColor="#3F98F7"
                    android:textSize="@dimen/font_size_title" />

                <ImageView
                    android:id="@+id/doctor_sign"
                    android:layout_width="@dimen/dp_80"
                    android:layout_height="@dimen/dp_80"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/dp_m_30"
                    android:layout_toRightOf="@id/doctor_name"
                    android:scaleType="fitCenter" />
            </RelativeLayout>
        </LinearLayout>
    </com.keydom.ih_common.view.AnimationScrollView>
    <!--</com.ganxin.library.LoadDataLayout>-->
</LinearLayout>