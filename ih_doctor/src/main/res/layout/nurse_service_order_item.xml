<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_left_right_dp"
    android:layout_marginEnd="@dimen/padding_left_right_dp"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@color/primary_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/service_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/nurse_service_distance_time_tv_tip"
                android:drawableLeft="@mipmap/point_green"
                android:drawablePadding="@dimen/dp_13"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="打针"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/nurse_service_distance_time_tv_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/nurse_service_distance_time_tv"
                android:text="距离上门时间："
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/nurse_service_distance_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_13"
                android:background="@drawable/nurse_service_time_tv_bg"
                android:paddingLeft="@dimen/dp_11"
                android:paddingTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_11"
                android:paddingBottom="@dimen/dp_6"
                android:text="20小时"
                android:textColor="#8F6BEB"
                android:textSize="@dimen/font_size_primary" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_9"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="订单号："
                android:textColor="#999999"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="N0001201809132300003"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_auxiliary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="科室："
                android:textColor="#999999"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/service_dept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="泌尿内科"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_auxiliary" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="地址："
                android:textColor="#999999"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/service_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="四川省成都市武侯区天府软件园C区11-22"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_auxiliary" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@color/line_color" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_12">

            <TextView
                android:id="@+id/service_time_tip"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@mipmap/patient_circle_green"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center_vertical"
                android:text="上门时间"
                android:textSize="@dimen/font_size_auxiliary" />

            <View
                android:id="@+id/service_line"
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_toRightOf="@id/service_time_tip"
                android:background="#eeeeee" />

            <TextView
                android:id="@+id/service_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_toRightOf="@id/service_line"
                android:gravity="center_vertical"
                android:text="2018.10.19  19：00-20：00"
                android:textSize="@dimen/font_size_auxiliary" />

        </RelativeLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>