<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_left_right_dp"
    android:paddingTop="@dimen/dp_19"
    android:paddingRight="@dimen/padding_left_right_dp"
    android:paddingBottom="@dimen/dp_19">

    <ImageView
        android:id="@+id/service_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@mipmap/point_blue" />

    <TextView
        android:id="@+id/service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_toRightOf="@id/service_icon"
        android:text="问诊服务"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/font_size_primary" />

    <TextView
        android:id="@+id/service_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="已开通"
        android:visibility="gone"
        android:textColor="@color/font_service_enable"
        android:textSize="@dimen/font_size_primary" />
</RelativeLayout>