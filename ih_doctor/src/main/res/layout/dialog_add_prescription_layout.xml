<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_bg_color"
    android:orientation="vertical">

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="55dp">
      <TextView
          android:id="@+id/tv_hos"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="55dp"
          android:text="院内处方"
          android:textColor="@color/tab_color"
          android:gravity="center"
          android:textSize="@dimen/dp_15"
          />
      <TextView
          android:id="@+id/tv_wai"
          android:layout_weight="1"
          android:layout_width="0dp"
          android:layout_height="55dp"
          android:text="外延处方"
          android:gravity="center"
          android:textColor="@color/cu_black"
          android:background="@color/wai_yan"
          android:textSize="@dimen/dp_15"
          />
  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_60"
        android:paddingRight="@dimen/dp_60">


        <TextView
            android:id="@+id/add_common_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/common_prescription"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text="普通" />

        <TextView
            android:id="@+id/add_paediatrics_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/paediatrics_prescription"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:text="儿科" />


    </LinearLayout>


    <ImageButton
        android:id="@+id/dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_33"
        android:layout_marginBottom="@dimen/dp_33"
        android:background="@null"
        android:src="@mipmap/group_dialog_close" />

</LinearLayout>