<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F9F9F9" />

    <android.support.design.widget.TabLayout
        android:id="@+id/nursing_project_tablayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        app:tabIndicatorColor="@color/tab_color"
        app:tabSelectedTextColor="@color/tab_color"
        app:tabIndicatorHeight="1dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        >

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/nursing_project_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:tabTextAppearance="@style/TabLayoutTextStyle"></android.support.v4.view.ViewPager>

</LinearLayout>