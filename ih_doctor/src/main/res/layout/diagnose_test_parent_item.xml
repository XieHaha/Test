<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_bottom_line_bg"
    android:orientation="horizontal"
    android:paddingTop="@dimen/dp_14"
    android:paddingBottom="@dimen/dp_14"
    android:weightSum="8">

    <TextView
        android:id="@+id/inspact_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:drawableLeft="@mipmap/point_purple_blue"
        android:drawablePadding="@dimen/dp_10"
        android:ellipsize="end"
        android:gravity="left"
        android:singleLine="true"
        android:text="检验乙肝五项"
        android:textSize="@dimen/font_size_primary" />

    <TextView
        android:id="@+id/dept_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:layout_weight="2.3"
        android:text="科室"
        android:textSize="@dimen/font_size_primary" />

    <TextView
        android:id="@+id/test_item_fee"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:gravity="left"
        android:text="50"
        android:textColor="#FF3939" />

    <TextView
        android:id="@+id/right_img"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_weight="0.9"
        android:drawableRight="@mipmap/arrow_bottom_grey"
        android:scaleType="centerInside" />

    <ImageButton
        android:id="@+id/sub_item_delete_btn"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_weight="0.9"
        android:background="@null"
        android:paddingLeft="@dimen/dp_10"
        android:src="@mipmap/consulting_delete_icon" />

</LinearLayout>
