<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_57"
    android:background="@drawable/common_bottom_line_bg"
    >

    <TextView
        android:id="@+id/inspact_item_name"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:drawableLeft="@mipmap/point_purple_blue"
        android:drawablePadding="@dimen/dp_10"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="检验乙肝五项"
        android:textSize="@dimen/font_size_primary" />

    <TextView
        android:id="@+id/dept_name"
        android:layout_toRightOf="@+id/inspact_item_name"
        android:layout_width="@dimen/dp_100"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="科室"
        android:textSize="@dimen/font_size_primary"
        />

    <TextView
        android:id="@+id/test_item_fee"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/dept_name"
        android:text="50"
        android:textColor="#FF3939"
        />




    <ImageButton
        android:id="@+id/sub_item_delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:paddingLeft="@dimen/dp_10"
        android:src="@mipmap/consulting_delete_icon"
        />
    <TextView
        android:id="@+id/right_img"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_25"
        android:drawableRight="@mipmap/arrow_bottom_grey"
        />
    <TextView
        android:id="@+id/all_choose_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_img"
        android:layout_marginRight="@dimen/dp_20"
        android:gravity="center_vertical"
        android:checked="false"
        android:clickable="true"
        android:text="全选"
        android:textColor="@color/agreement" />
</RelativeLayout>
