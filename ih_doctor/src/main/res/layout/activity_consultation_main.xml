<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <ImageView
            android:id="@+id/consultation_main_back_iv"
            android:layout_width="@dimen/dp_44"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15"
            android:src="@mipmap/back" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/consultation_main_apply_tv"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/consultation_tab_left_selector"
                android:gravity="center"
                android:text="会诊申请"
                android:textColor="@color/color_3f98f7_ffffff_selector"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/consultation_main_history_tv"
                android:layout_width="@dimen/dp_88"
                android:layout_height="@dimen/dp_28"
                android:background="@drawable/consultation_tab_right_selector"
                android:gravity="center"
                android:text="会诊历史"
                android:textColor="@color/color_3f98f7_ffffff_selector"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />

    <FrameLayout
        android:id="@+id/consultation_main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>