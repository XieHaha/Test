<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fontColorForeground">

    <ImageView
        android:id="@+id/massage_icon_img"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_marginTop="@dimen/dp_24" />

    <TextView
        android:id="@+id/message_type_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_toRightOf="@+id/massage_icon_img"
        android:text="医院通知"
        android:textColor="#666666"
        android:textSize="@dimen/dp_15" />

    <TextView
        android:id="@+id/isReadTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_36"
        android:layout_toRightOf="@+id/message_type_tv"
        android:text="已读"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/message_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_type_tv"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_28"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_toRightOf="@+id/massage_icon_img"
        android:ellipsize="end"
        android:lineSpacingExtra="@dimen/dp_5"
        android:maxLines="2"
        android:text=""
        android:textColor="#BBBBBB"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/message_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_34"
        android:layout_marginEnd="@dimen/dp_23"
        android:text=""
        android:textColor="#BBBBBB"
        android:textSize="@dimen/dp_12" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_below="@+id/message_title_tv"
        android:layout_marginStart="@dimen/dp_86"
        android:layout_marginEnd="@dimen/dp_19"
        android:background="#F5F5F5" />
</RelativeLayout>