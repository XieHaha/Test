<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/prient_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_19"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_19"
    android:background="@drawable/white_corner_bg"
    android:paddingBottom="@dimen/dp_20">

    <TextView
        android:id="@+id/medical_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_25"
        android:drawableLeft="@mipmap/point_green"
        android:drawablePadding="@dimen/dp_10"
        android:text="双黄连口服液"
        android:textColor="#333333"
        android:textSize="@dimen/font_size_primary" />

    <LinearLayout
        android:id="@+id/spec_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medical_name_tv"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_30">

        <TextView
            android:id="@+id/medical_spec_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="规格：10ml*10支/盒"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/quantity_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/medical_spec_tv"
            android:layout_alignBottom="@id/medical_spec_tv"
            android:layout_centerHorizontal="true"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="1盒"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/fee_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/medical_spec_tv"
            android:layout_alignBottom="@id/medical_spec_tv"
            android:layout_alignParentRight="true"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="12元"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/usage_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spec_rl"
        android:layout_marginLeft="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:paddingRight="@dimen/dp_30">

        <TextView
            android:id="@+id/medical_usage_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="用法："
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/way_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/medical_usage_tv"
            android:layout_alignBottom="@id/medical_usage_tv"
            android:layout_centerHorizontal="true"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="口服"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/usage_frequency_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/medical_usage_tv"
            android:layout_alignBottom="@id/medical_usage_tv"
            android:layout_alignParentRight="true"
            android:layout_weight="1.5"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="每日两次"
            android:textColor="#666666"
            android:textSize="@dimen/dp_12" />

    </LinearLayout>


    <ImageView
        android:id="@+id/select_img"
        android:layout_width="@dimen/dp_23"
        android:layout_height="@dimen/dp_23"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_13"
        android:src="@mipmap/nursing_project_unselect" />
</RelativeLayout>