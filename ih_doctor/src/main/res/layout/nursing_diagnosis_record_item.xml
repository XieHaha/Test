<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F9F9F9">

    <View
        android:id="@+id/item_view"
        android:layout_width="@dimen/dp_2"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_40"
        android:visibility="invisible"
        android:background="#DDDDDD" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:drawableLeft="@mipmap/point_purple_blue"
            android:drawablePadding="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_35"
            android:text="2018.09.12"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14" />

        <ImageView
            android:id="@+id/close_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_19"
            android:src="@mipmap/fold_icon"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/open_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_19"
            android:src="@mipmap/search"
            android:visibility="gone" />

        <TextView
            android:id="@+id/diagnosis_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_tv"
            android:layout_marginTop="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_65"
            android:paddingRight="@dimen/dp_20"
            android:text="诊断：上呼吸道感染"
            android:textColor="#999999"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/function_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/diagnosis_tv"
            android:layout_marginStart="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/function_medical_record_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_tv_bg"
                android:clickable="false"
                android:paddingLeft="@dimen/dp_13"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_4"
                android:text="病历"
                android:textColor="#3F98F7"
                android:textSize="@dimen/dp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/function_check_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/green_tv_bg"
                android:clickable="false"
                android:paddingLeft="@dimen/dp_13"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_4"
                android:text="检验"
                android:textColor="#22E17E"
                android:textSize="@dimen/dp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/function_inspect_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/red_tv_bg"
                android:clickable="false"
                android:paddingLeft="@dimen/dp_13"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_4"
                android:text="检查"
                android:textColor="#FF997D"
                android:textSize="@dimen/dp_12"
                android:visibility="gone" />

            <TextView
                android:id="@+id/function_prescription_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/yellow_tv_bg"
                android:clickable="false"
                android:paddingLeft="@dimen/dp_13"
                android:paddingTop="@dimen/dp_4"
                android:paddingRight="@dimen/dp_13"
                android:paddingBottom="@dimen/dp_4"
                android:text="处方"
                android:textColor="#FBD54E"
                android:textSize="@dimen/dp_12"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>