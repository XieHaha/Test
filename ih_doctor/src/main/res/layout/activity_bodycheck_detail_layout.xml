<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F9F9F9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_156">

                <TextView
                    android:id="@+id/bodycheck_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dp_35"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_20" />

                <TextView
                    android:id="@+id/department_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="科室:   "
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/department_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_toRightOf="@+id/department_label"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/department_label"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_toRightOf="@+id/name_label"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/department_label"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="姓名:   "
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/order_num_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/dp_147"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:text="门诊号:   "
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/order_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:layout_toRightOf="@+id/order_num_label"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/sex_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/order_num_label"
                    android:layout_marginRight="@dimen/dp_70"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_toRightOf="@+id/sex_label"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/sex_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/order_num_label"
                    android:layout_marginLeft="@dimen/dp_147"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text="性别:   "
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/age_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/order_num_label"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_26"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/age_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/order_num_label"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/age_tv"
                    android:text="年龄:   "
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/sp_14" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="#F9F9F9"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_19"
                    android:text="检查部位："
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/body_check_part_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:paddingLeft="@dimen/dp_11"
                    android:paddingRight="@dimen/dp_11"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/body_check_photo_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_18"
                android:layout_marginRight="@dimen/dp_19"></android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_19"
                    android:text="影像表现："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/body_check_photo_desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/font_size_primary"
                    android:layout_marginRight="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_25">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_19"
                    android:text="诊断意见："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/body_check_suggestion_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:layout_marginRight="@dimen/dp_20"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/report_doctor_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_22"
                    android:text="报告医生:   "
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/report_doctor_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_toRightOf="@+id/report_doctor_name_label"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/audit_doctor_name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_toLeftOf="@+id/audit_doctor_name_tv"
                    android:text="审核医生:   "
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/audit_doctor_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginRight="@dimen/dp_25"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_primary" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_2"
                    android:layout_below="@+id/audit_doctor_name_tv"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_19"
                    android:background="@drawable/line_bg" />

                <TextView
                    android:id="@+id/date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/report_doctor_name_label"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_36"
                    android:text="日期:   "
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/report_doctor_name_label"
                    android:layout_marginTop="@dimen/dp_36"
                    android:layout_marginRight="@dimen/dp_25"
                    android:layout_toRightOf="@+id/date_label"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/date_label"
                    android:layout_marginLeft="@dimen/dp_18"
                    android:layout_marginTop="@dimen/dp_25"
                    android:layout_marginRight="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_30"
                    android:text="使用说明：《门诊电子病历系统》由病人数据录入、处方管理、信息查询、数据统计、系统维护等组成"
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/dp_12" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>