<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/nurse_service_item_bg">

    <TextView
        android:id="@+id/sub_order_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_15"
        android:drawableLeft="@mipmap/point_green"
        android:drawablePadding="@dimen/dp_17"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_15"
        android:text="新增子订单"
        android:textColor="#333333"
        android:textSize="@dimen/sp_13" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/child_record_delete_tv"
       android:background="@drawable/bottom_blue_line"
       android:layout_alignParentRight="true"
       android:paddingTop="@dimen/dp_10"
       android:layout_marginTop="@dimen/dp_10"
       android:layout_marginEnd="@dimen/dp_20"
       android:textSize="@dimen/sp_13"
       android:textColor="#3F98F7"
       android:text="删除"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/child_record_update_tv"
        android:layout_toLeftOf="@+id/child_record_delete_tv"
        android:background="@drawable/bottom_blue_line"
        android:paddingTop="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:textSize="@dimen/sp_13"
        android:textColor="#3F98F7"
        android:text="修改"/>

    <LinearLayout
        android:id="@+id/service_sub_order_detail_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sub_order_tv"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="订单号："
                android:textColor="#bbbbbb"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/sub_order_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="服务项目："
                android:textColor="#bbbbbb"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/sub_service_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="服务次数："
                android:textColor="#bbbbbb"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/service_item_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="服务费用："
                android:textColor="#bbbbbb"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/service_item_fee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="@color/red"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="创建时间："
                android:textColor="#bbbbbb"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/service_item_create_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="创建人："
                android:textColor="#bbbbbb"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/service_item_create_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="支付状态："
                android:textColor="#bbbbbb"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/service_item_pay_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:textColor="#FFC700"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>