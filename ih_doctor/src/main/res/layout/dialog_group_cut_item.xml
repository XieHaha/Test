<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/dp_20"
    android:paddingTop="@dimen/dp_20"
    android:paddingLeft="@dimen/padding_left_right_dp"
    android:paddingRight="@dimen/padding_left_right_dp"
    android:background="@drawable/common_white_click_bg">

    <ImageView
        android:id="@+id/group_icon"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/point_green"/>

    <TextView
        android:id="@+id/patient_name"
        android:layout_toRightOf="@id/group_icon"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_select"
        android:textSize="@dimen/font_size_primary"
        android:text="唐琳专家团队"/>
    <TextView
        android:id="@+id/group_tag"
        android:layout_toRightOf="@id/patient_name"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/current_group_tag_bg"
        android:textColor="@color/font_select"
        android:textSize="@dimen/font_size_bottom_bar"
        android:padding="@dimen/dp_3"
        android:text="当前团队"/>
    <ImageView
        android:id="@+id/group_select"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/group_selected"/>


</RelativeLayout>