<?xml version="1.0" encoding="utf-8"?>
<com.keydom.mianren.ih_doctor.view.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
  >

    <RelativeLayout
        android:id="@+id/main_layout"
        android:background="@drawable/common_white_click_bg"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_34"
        android:paddingTop="@dimen/dp_8"
        android:paddingRight="@dimen/padding_left_right_dp"
        android:paddingBottom="@dimen/dp_8"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.keydom.ih_common.view.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dp_39"
            android:layout_height="@dimen/dp_39"
            android:layout_centerVertical="true"
            android:background="@mipmap/user_icon" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_toRightOf="@id/user_icon"
            android:text="唐玲"
            android:maxWidth="@dimen/dp_80"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary" />

        <TextView
            android:id="@+id/user_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/user_name"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toLeftOf="@id/attendion_tv"
            android:layout_toRightOf="@id/user_name"
            android:text="副主任医师"
            android:textColor="@color/fontColorDirection"
            android:textSize="@dimen/font_size_auxiliary" />

        <TextView
            android:id="@+id/user_hospital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            android:layout_alignLeft="@id/user_name"
            android:layout_marginTop="@dimen/dp_6"
            android:text="成都市第一人民医院"
            android:textColor="@color/fontColorDirection"
            android:textSize="@dimen/font_size_auxiliary" />

        <TextView
            android:id="@+id/user_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/user_hospital"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toLeftOf="@id/attendion_tv"
            android:layout_toRightOf="@id/user_hospital"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="儿科"
            android:textColor="@color/fontColorDirection"
            android:textSize="@dimen/font_size_auxiliary" />

        <TextView
            android:id="@+id/attendion_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/my_attention_bg"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_6"
            android:text="已关注"
            android:textSize="@dimen/font_size_primary" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/delete"
            android:layout_width="@dimen/dp_100"
            android:layout_height="match_parent"
            android:background="@drawable/btn_delete"
            android:text="取消关注"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="16sp" />

    </LinearLayout>


</com.keydom.mianren.ih_doctor.view.SwipeItemLayout>