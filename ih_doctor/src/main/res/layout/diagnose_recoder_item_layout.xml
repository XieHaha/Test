<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/padding_left_right_dp"
    android:layout_marginRight="@dimen/padding_left_right_dp"
    android:layout_marginBottom="@dimen/dp_14"
    app:cardCornerRadius="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_26">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14">

            <ImageView
                android:id="@+id/type_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/point_green" />

            <TextView
                android:id="@+id/doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/type_point"
                android:paddingLeft="@dimen/dp_13"
                android:text="问诊医生：唐林"
                android:textSize="@dimen/font_size_fuc" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="2018.10.18 16:24:35"
                android:textSize="@dimen/font_size_auxiliary" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_2"
            android:background="@color/line_color" />


        <LinearLayout
            android:id="@+id/one_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_25">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/name_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="患者:"
                    android:textColor="@color/fontColorDirection"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/name_tip"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="张三"
                    android:textColor="@color/fontColorNavigate"
                    android:textSize="@dimen/font_size_auxiliary" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/user_diagnose_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="诊断:"
                    android:textColor="@color/fontColorDirection"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/user_diagnose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/user_diagnose_tip"
                    android:ellipsize="end"
                    android:paddingLeft="@dimen/dp_12"
                    android:singleLine="true"
                    android:text="上呼吸道感染"
                    android:textColor="@color/fontColorNavigate"
                    android:textSize="@dimen/font_size_auxiliary" />
            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/two_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sex_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别:"
                    android:textColor="@color/fontColorDirection"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/sex_tip"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="男"
                    android:textColor="@color/fontColorNavigate"
                    android:textSize="@dimen/font_size_auxiliary" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/age_tip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="年龄:"
                    android:textColor="@color/fontColorDirection"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/age_tip"
                    android:paddingLeft="@dimen/dp_12"
                    android:text="20岁"
                    android:textColor="@color/fontColorNavigate"
                    android:textSize="@dimen/font_size_auxiliary" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>