<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp_19"
    android:paddingBottom="@dimen/dp_19"
    android:paddingLeft="@dimen/padding_left_right_dp"
    android:paddingRight="@dimen/padding_left_right_dp"
    android:background="@drawable/item_bg_bottom_divider"
    >

    <ImageView
        android:id="@+id/service_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="center"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:src="@mipmap/point_blue"/>
    <TextView
        android:id="@+id/service_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/service_icon"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_centerVertical="true"
        android:textColor="@color/edit_font_color"
        android:textSize="@dimen/font_size_primary"
        android:text="问诊服务"/>

    <TextView
        android:id="@+id/service_enable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/font_service_enable"
        android:textSize="@dimen/font_size_primary"
        android:text="已开通"/>



</RelativeLayout>