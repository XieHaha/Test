<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_white_click_bg"

    android:gravity="center_horizontal"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_right_dp"
        android:paddingTop="@dimen/dp_10"
        android:paddingRight="@dimen/padding_left_right_dp"
        android:paddingBottom="@dimen/dp_5">


        <com.keydom.ih_common.view.CircleImageView
            android:id="@+id/user_icon"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:layout_alignParentLeft="true"
            android:background="@mipmap/user_icon" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_toRightOf="@id/user_icon"
            android:text="风梳烟沐"
            android:maxWidth="@dimen/dp_80"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary" />

        <TextView
            android:id="@+id/user_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_toRightOf="@id/user_name"
            android:text="52岁"
            android:textColor="@color/fontColorDirection"
            android:textSize="@dimen/font_size_auxiliary" />

        <TextView
            android:id="@+id/user_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_toRightOf="@id/user_age"
            android:text="男"
            android:textColor="@color/fontColorDirection"
            android:textSize="@dimen/font_size_auxiliary" />

        <ImageView
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:src="@mipmap/consulting_delete_icon" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@mipmap/patient_circle_green"
            android:drawablePadding="@dimen/dp_6"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_6"
            android:text="服务中"
            android:textSize="@dimen/font_size_primary" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line_color" />


    <RelativeLayout
        android:id="@+id/check_idea_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_left_right_dp"
        android:layout_marginRight="@dimen/padding_left_right_dp"
        android:background="@drawable/common_bottom_line_bg"
        android:paddingTop="@dimen/dp_14"
        android:paddingBottom="@dimen/dp_14"
        android:visibility="gone">

        <TextView
            android:id="@+id/check_idea_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/check_idea_bg"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_3"
            android:text="审核意见"
            android:textColor="#DCC98F"
            android:textSize="@dimen/font_size_auxiliary" />

        <TextView
            android:id="@+id/check_idea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/update_prescription"
            android:layout_toRightOf="@id/check_idea_tip"
            android:paddingLeft="@dimen/dp_12"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_3"
            android:text="超量使用未注明剂量、原因"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary" />

        <TextView
            android:id="@+id/update_prescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/update_prescription_bg"
            android:paddingLeft="@dimen/dp_6"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_3"
            android:text="处方修改"
            android:textColor="#0AD8C3"
            android:textSize="@dimen/font_size_auxiliary" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_right_dp"
        android:paddingTop="@dimen/dp_16"
        android:paddingRight="@dimen/padding_left_right_dp">

        <TextView
            android:id="@+id/diagnose_dec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_10"
            android:text="3日前自觉鼻塞、流涕，轻微咳嗽，自服抗感冒药物效果不佳，近1日觉畏寒，发热，体温37.7℃。"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/img_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/diagnose_dec"
            android:layout_marginTop="@dimen/dp_10">

        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_right_dp"
        android:paddingTop="@dimen/dp_11"
        android:paddingRight="@dimen/padding_left_right_dp"
        android:paddingBottom="@dimen/dp_14">

        <TextView
            android:id="@+id/order_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/diagnose_illustration"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center_vertical"
            android:text="图文问诊"
            android:textColor="#FF6E4D"
            android:textSize="@dimen/font_size_auxiliary" />

        <TextView
            android:id="@+id/diagnose_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018.09.27"
            android:textColor="#999999"
            android:textSize="@dimen/font_size_primary" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />
</LinearLayout>