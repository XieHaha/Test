<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/white_shadow_bg"
        android:paddingTop="@dimen/dp_27"
        android:paddingBottom="@dimen/dp_16">

        <ImageView
            android:id="@+id/consultation_order_header_iv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_30"
            android:src="@mipmap/im_default_head_image" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_toEndOf="@id/consultation_order_header_iv"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_23">

            <TextView
                android:id="@+id/consultation_order_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/sp_14"
                tools:text="名字" />

            <TextView
                android:id="@+id/consultation_order_sex_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:layout_marginStart="@dimen/dp_14"
                android:background="@drawable/corner20_dfdfdf_stoke"
                android:gravity="center"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12"
                android:textColor="@color/tab_nol_color"
                android:textSize="@dimen/sp_10"
                tools:text="女" />

            <TextView
                android:id="@+id/consultation_order_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/corner20_dfdfdf_stoke"
                android:gravity="center"
                android:paddingStart="@dimen/dp_12"
                android:paddingEnd="@dimen/dp_12"
                android:textColor="@color/tab_nol_color"
                android:textSize="@dimen/sp_10"
                tools:text="20岁" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/consultation_order_status_tv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_18"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/corner5_ff3939_bg"
                android:gravity="center"
                android:paddingStart="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:textColor="@color/primary_bg_color"
                android:textSize="@dimen/sp_10"
                tools:text="紧急" />

        </LinearLayout>

        <TextView
            android:id="@+id/consultation_order_card_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_18"
            android:layout_below="@id/layout"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@id/consultation_order_header_iv"
            android:gravity="center"
            android:paddingStart="@dimen/dp_12"
            android:paddingEnd="@dimen/dp_12"
            android:text="@string/txt_visit_card"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@id/consultation_order_header_iv"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@color/line_color" />

        <ImageView
            android:layout_width="@dimen/dp_18"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/view"
            android:layout_marginStart="@dimen/dp_30"
            android:src="@mipmap/icon_leave_time" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/view"
            android:layout_marginStart="@dimen/dp_58"
            android:gravity="center"
            android:text="@string/txt_apply_time"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/consultation_order_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_40"
            android:layout_below="@id/view"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_23"
            android:gravity="center"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12"
            tools:text="2020年4月3日 16:01:25" />

    </RelativeLayout>

</LinearLayout>