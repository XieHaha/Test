<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/sub_item_entrust_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@drawable/common_bottom_line_bg"
            android:hint="请输入内容"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_10"
            android:singleLine="false"
            android:textColor="@color/primary_font_color"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/font_size_primary" />

        <TextView
            android:id="@+id/limite_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/sub_item_entrust_et"
            android:layout_alignBottom="@id/sub_item_entrust_et" />


    </RelativeLayout>


</LinearLayout>