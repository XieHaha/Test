<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_bg_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar"></include>

    <LinearLayout
        style="@style/MainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:layout_width="@dimen/dp_316"
            android:layout_height="@dimen/dp_154"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_35"
            android:src="@mipmap/testadbg" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_19"
            android:background="@drawable/update_password_input_bg">

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="23dp"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:src="@mipmap/password" />


            <com.keydom.ih_common.view.PasswordEditText
                android:id="@+id/password_input_et"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:layout_marginLeft="@dimen/dp_41"
                android:background="@null"
                android:hint="@string/set_password"
                android:singleLine="true"
                android:textColor="@color/primary_font_color"
                android:textColorHint="@color/fontColorDirection"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/dp_13" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_19"
            android:background="@drawable/update_password_input_bg">

            <ImageView
                android:layout_width="@dimen/dp_17"
                android:layout_height="@dimen/dp_19"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_12"
                android:layout_marginBottom="@dimen/dp_12"
                android:src="@mipmap/password" />


            <com.keydom.ih_common.view.PasswordEditText
                android:id="@+id/re_password_input_et"
                style="@android:style/Widget.EditText"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_43"
                android:layout_marginLeft="@dimen/dp_41"
                android:layout_toLeftOf="@id/get_identifying_code_bt"
                android:background="@null"
                android:hint="@string/re_password"
                android:singleLine="true"
                android:textColor="@color/primary_font_color"
                android:textColorHint="@color/fontColorDirection"
                android:textCursorDrawable="@drawable/edit_cursor"
                android:textSize="@dimen/dp_13" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_10"
            android:text="密码为6-20位数字和字母组合"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_auxiliary" />


        <RelativeLayout
            android:layout_width="@dimen/dp_260"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_39">

            <Button
                android:id="@+id/update_finish_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/dp_260"
                android:layout_height="@dimen/dp_53"
                android:background="@drawable/login_btn"
                android:gravity="center"
                android:text="@string/update_finish"
                android:textColor="@color/primary_bg_color"
                android:textSize="@dimen/dp_17" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>