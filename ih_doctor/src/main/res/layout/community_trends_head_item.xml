<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/head_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_white_click_bg"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/padding_left_right_dp"
        android:paddingTop="@dimen/dp_21"
        android:paddingRight="@dimen/padding_left_right_dp"
        android:paddingBottom="@dimen/dp_16">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/community_img"
            android:layout_width="@dimen/dp_322"
            android:layout_height="@dimen/dp_144"
            android:background="@drawable/top_article_img_bg"
            android:scaleType="centerCrop"
            app:riv_corner_radius="@dimen/dp_5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/community_img"
            android:layout_alignTop="@id/community_img"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_6"
            android:background="@drawable/top_article_tag_bg"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_6"
            android:paddingBottom="@dimen/dp_3"
            android:text="专题"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_12" />

        <TextView
            android:id="@+id/community_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_img"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:text="文学读懂个岁地整点上调至5000元：工薪阶级最受益"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_title" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/community_title">

            <TextView
                android:id="@+id/community_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@drawable/article_top_tag"
                android:paddingLeft="@dimen/dp_8"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_3"
                android:text="置顶"
                android:textColor="#E83232"
                android:textSize="@dimen/font_size_auxiliary" />

            <TextView
                android:id="@+id/author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="华西附院：唐晴·三小时前asdadadsad水水水水撒看见打死了就打死了的经历撒旦极乐世界了asdasdsad"
                android:maxWidth="@dimen/dp_200"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="@color/action_bar_txt_color"
                android:textSize="@dimen/font_size_auxiliary" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />
</LinearLayout>