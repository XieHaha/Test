<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_0"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginEnd="@dimen/dp_15">

        <LinearLayout
            android:layout_width="@dimen/dp_160"
            android:layout_height="wrap_content"
            android:background="@mipmap/im_inquiry_pop_bg"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10" />

            <TextView
                android:id="@+id/inspection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/im_inquiry_inspection_icon"
                android:drawablePadding="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_0"
                android:paddingBottom="@dimen/dp_10"
                android:text="检验申请"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/examination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/im_inquiry_examination_icon"
                android:drawablePadding="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_0"
                android:paddingBottom="@dimen/dp_10"
                android:text="检查申请"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/referral"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/im_inquiry_referral_icon"
                android:drawablePadding="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_0"
                android:paddingBottom="@dimen/dp_10"
                android:text="转诊"
                android:visibility="visible"
                android:textColor="#FF333333"
                android:textSize="@dimen/sp_13" />

            <TextView
                android:id="@+id/inquiry_pop_triage_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/im_inquiry_referral_icon"
                android:drawablePadding="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_0"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/txt_triage"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/sp_13"
                android:visibility="visible" />

            <TextView
                android:id="@+id/inquiry_pop_consultation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/im_inquiry_referral_icon"
                android:drawablePadding="@dimen/dp_12"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dp_20"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_0"
                android:paddingBottom="@dimen/dp_10"
                android:text="@string/txt_consultation"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/sp_13"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>