<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <TextView
        android:id="@+id/pregnancy_record_detail_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_25"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        tools:text="名字" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预产期:  "
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/pregnancy_record_detail_due_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_14"
            tools:text="2020.09.14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产检日期:  "
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/pregnancy_record_detail_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_14"
            tools:text="2020.09.14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_color" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/pregnancy_record_detail_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>