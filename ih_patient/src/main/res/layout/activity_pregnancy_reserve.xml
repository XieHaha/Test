<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/reserve_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34.5dp"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/other_login_color"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/pregnancy_check_projects_root_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34.5dp"
                    android:layout_marginTop="23.5dp"
                    android:text="医生排班表"
                    android:textColor="@color/vip_pregnancy_week_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pregnancy_check_projects_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_13"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:paddingStart="@dimen/dp_0"
                    android:paddingEnd="@dimen/dp_23"
                    android:text="点击查看"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pregnancy_order_date_root_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34.5dp"
                    android:layout_marginTop="23.5dp"
                    android:text="预约时间"
                    android:textColor="@color/vip_pregnancy_week_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pregnancy_order_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_0"
                    android:paddingEnd="@dimen/dp_23"
                    android:text="请选择日期"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pregnancy_order_time_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34.5dp"
                    android:layout_marginTop="23.5dp"
                    android:text="预约时段"
                    android:textColor="@color/vip_pregnancy_week_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/nice_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_0"
                    android:paddingEnd="@dimen/dp_20"
                    android:drawableEnd="@mipmap/exa_report_down"
                    android:text="请选择时段"
                    android:drawablePadding="@dimen/dp_10"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/reserve_doctor_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34.5dp"
                    android:layout_marginTop="23.5dp"
                    android:text="所选时段当班医生"
                    android:textColor="@color/register_success_color"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/doctor_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_0"
                    android:paddingEnd="@dimen/dp_23"
                    android:text=""
                    android:textColor="@color/color_333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f9f9f9" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="35dp"
                android:text="为了节约您的就诊时间，您可以按医生约定的产检日期，提前1~2天进行检验检查预约与执行，以便携带检验检查报告就诊"
                android:textColor="@color/vip_pregnancy_week_text"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/pregnancy_detail_order_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_marginStart="@dimen/dp_21"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="@dimen/dp_21"
                android:layout_marginBottom="29dp"
                android:background="@mipmap/pay_commit_bg"
                android:gravity="center"
                android:text="预约"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/sp_17" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

