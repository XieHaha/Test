<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:drawableStart="@mipmap/icon_sleep_quality"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="昨晚睡眠质量"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@mipmap/icon_black_down"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/txt_add_record"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:drawableStart="@mipmap/icon_sleep_time"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="睡眠时长"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@mipmap/icon_black_down"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/txt_add_record"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:drawableStart="@mipmap/icon_sleep_status"
            android:drawablePadding="@dimen/dp_8"
            android:gravity="center"
            android:text="今天精神状态"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:drawableEnd="@mipmap/icon_black_down"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/txt_add_record"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

</LinearLayout>