<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:fillViewport="true">
        <com.ganxin.library.LoadDataLayout
            android:id="@+id/loadDataLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginTop="40dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:layout_alignParentBottom="true"
                    android:background="@mipmap/vip_member_card_shadows_bg" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="204dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center">


                    <ImageView
                        android:layout_width="320dp"
                        android:layout_height="204dp"
                        android:layout_centerInParent="true"
                        android:background="@mipmap/vip_card_bg" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="82dp"
                        android:layout_marginTop="37.5dp"
                        android:src="@mipmap/vip_card_name_icon" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="12.5dp"
                        android:src="@mipmap/vip_card_title_icon" />


                    <TextView
                        android:id="@+id/fragment_tab_member_card_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="82dp"
                        android:textColor="@color/vip_balance_text"
                        android:textSize="21sp" />


                    <TextView
                        android:id="@+id/fragment_vip_member_detail_card_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fragment_tab_member_card_num_tv"
                        android:layout_marginLeft="24dp"
                        android:layout_marginTop="54dp"
                        android:layout_marginBottom="24dp"
                        android:textColor="@color/vip_balance_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/fragment_vip_member_detail_card_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/fragment_tab_member_card_num_tv"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="54dp"
                        android:layout_marginBottom="24dp"
                        android:layout_toRightOf="@id/fragment_vip_member_detail_card_name_tv"
                        android:textColor="@color/vip_balance_text"
                        android:textSize="12sp" />


                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="154dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="余额"
                        android:textColor="@color/vip_detail_balance_text"
                        android:textSize="14sp" />


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="14.5dp"
                        android:src="@mipmap/vip_detail_balance_icon" />


                    <TextView
                        android:id="@+id/fragment_vip_member_detail_balance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:ellipsize="end"
                        android:textColor="@color/vip_detail_balance_number_text"
                        android:textSize="18sp" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="26dp"
                    android:layout_marginBottom="26dp"
                    android:background="@color/vip_line" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="到期日"
                        android:textColor="@color/vip_detail_balance_text"
                        android:textSize="14sp" />


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="14.5dp"
                        android:src="@mipmap/vip_date_icon" />


                    <TextView
                        android:id="@+id/fragment_vip_member_detail_date_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:ellipsize="end"
                        android:textColor="@color/vip_detail_balance_number_text"
                        android:textSize="18sp" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/primary_bg_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="167dp"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/fragment_vip_member_detail_charge_record_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="14.5dp"
                        android:src="@mipmap/vip_charge_record_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:ellipsize="end"
                        android:text="充值记录"
                        android:textColor="@color/vip_detail_balance_number_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_vip_member_detail_charge_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">


                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="14.5dp"
                        android:src="@mipmap/vip_charge_icon" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:ellipsize="end"
                        android:text="续费"
                        android:textColor="@color/vip_detail_balance_number_text"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

        </com.ganxin.library.LoadDataLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
