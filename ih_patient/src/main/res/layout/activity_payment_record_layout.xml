<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/primary_color">

    <include layout="@layout/common_title_bar" />

    <android.support.design.widget.TabLayout
        android:id="@+id/payment_tb"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        app:tabSelectedTextColor="@color/other_login_color"
        app:tabTextColor="@color/tab_nol_color"
        app:tabIndicatorColor="@color/other_login_color"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/payment_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>