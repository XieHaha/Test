<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_title_bar"/>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@color/color_f9f9f9"
            android:layout_height="match_parent">
            <include layout="@layout/include_nursing_order_basic"/>
            <TextView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingTop="@dimen/dp_19"
                android:paddingBottom="@dimen/dp_19"
                android:text="@string/order_demand"
                android:background="@color/white"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/edit_hint_color"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/line_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/demand_content"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/pay_unselected"
                android:background="@color/white"
                android:padding="@dimen/padding_left_right_dp"
                android:text="需求详情描述"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingTop="@dimen/dp_19"
                android:paddingBottom="@dimen/dp_19"
                android:text="@string/pathological_basis"
                android:background="@color/white"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/edit_hint_color"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/line_color"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:padding="@dimen/padding_left_right_dp"
                android:background="@color/white"
                android:id="@+id/img_rv"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingTop="@dimen/dp_19"
                android:paddingBottom="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/important_notice"
                android:background="@color/white"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/nursing_status_red"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/line_color"
                />
                <TextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:padding="@dimen/padding_left_right_dp"
                    android:textSize="@dimen/font_size_auxiliary"
                    android:text="@string/important_notice_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textColor="@color/tab_nol_color"
                    android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingTop="@dimen/dp_19"
                android:paddingBottom="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/service_cost"
                android:background="@color/white"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/edit_hint_color"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/line_color"
                />
            <TextView
                android:layout_width="match_parent"
                android:background="@color/white"
                android:id="@+id/service_cost_content"
                android:textSize="@dimen/font_size_auxiliary"
                android:textColor="@color/tab_nol_color"
                android:padding="@dimen/padding_left_right_dp"
                android:layout_height="wrap_content"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/line_color"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:paddingLeft="@dimen/padding_left_right_dp"
                android:paddingRight="@dimen/padding_left_right_dp"
                android:paddingBottom="@dimen/dp_53"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计："
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/tab_nol_color"
                    android:layout_alignBottom="@+id/money"
                    android:id="@+id/total"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/money"
                    android:layout_marginTop="@dimen/dp_19"
                    android:layout_toRightOf="@+id/total"
                    android:layout_marginStart="@dimen/dp_13"
                    android:textColor="@color/nursing_status_red"
                    android:textSize="@dimen/dp_17"
                    android:text="¥"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/line_color"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/dp_48"
                android:gravity="center"
                android:textSize="@dimen/font_size_fuc"
                android:text="@string/nursing_order_charge_back"
                android:id="@+id/charge_back"
                android:textColor="@color/edit_hint_color"
                android:background="@color/color_f9f9f9"
                />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/dp_48"
                    android:gravity="center"
                    android:textSize="@dimen/font_size_fuc"
                    android:id="@+id/go_pay"
                    android:visibility="gone"
                    android:text="支付"
                    android:textColor="@color/white"
                    android:background="@color/login_btn_color"
                    />
            </LinearLayout>



        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>