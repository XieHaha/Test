<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_123"
        android:background="#3F98F7">

        <ImageView
            android:id="@+id/order_cure_back_img"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginLeft="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_3"
            android:padding="@dimen/dp_12"
            android:src="@mipmap/order_hospital_cure_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_15"
            android:text="入院服务"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/dp_17" />

        <LinearLayout
            android:id="@+id/order_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_cure_back_img"
            android:layout_marginLeft="@dimen/dp_41"
            android:orientation="vertical">

            <TextView
                android:id="@+id/order_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="入院申请"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/order_time_tv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_below="@+id/order_time_label"
                android:ellipsize="end"
                android:lines="1"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="#92C7FF"
                android:textSize="@dimen/dp_12"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/audit_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_cure_back_img"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/order_time_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/audit_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="入院审核"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/audit_time_tv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_below="@+id/audit_time_label"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="1"
                android:text=""
                android:textColor="#92C7FF"
                android:textSize="@dimen/dp_12"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/confirm_time_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_cure_back_img"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/audit_time_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/confirm_time_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="入院确认"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dp_12" />

            <TextView
                android:id="@+id/confirm_time_tv"
                android:layout_width="@dimen/dp_80"
                android:layout_height="wrap_content"
                android:layout_below="@+id/confirm_time_label"
                android:gravity="center_horizontal"
                android:ellipsize="end"
                android:lines="1"
                android:text=""
                android:textColor="#92C7FF"
                android:textSize="@dimen/dp_12"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/audit_time_layout"
            android:layout_marginLeft="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_70">

            <View
                android:id="@+id/procee_to_audit"
                android:layout_width="@dimen/dp_96"
                android:layout_height="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="#92C7FF" />

            <ImageView
                android:id="@+id/node_of_order"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:src="@mipmap/process_doing" />

            <View
                android:id="@+id/process_to_confirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_2"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toRightOf="@+id/procee_to_audit"
                android:background="#92C7FF" />

            <ImageView
                android:id="@+id/node_of_audit"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:src="@mipmap/process_waiting" />

            <ImageView
                android:id="@+id/node_of_confirm"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:src="@mipmap/process_waiting" />

        </RelativeLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/order_top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/order_confirm_head_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_118"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/confirm_head_label_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:gravity="center_horizontal"
                            android:paddingLeft="@dimen/dp_35"
                            android:paddingTop="@dimen/dp_40"
                            android:paddingRight="@dimen/dp_35"
                            android:text=""
                            android:textColor="#666666"
                            android:textSize="@dimen/dp_17" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/order_audit_head_layout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_114"
                        android:layout_marginTop="@dimen/dp_25"
                        android:background="@drawable/order_hospital_cure_head"
                        android:visibility="gone">

                        <LinearLayout
                            android:id="@+id/head_label_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/head_label_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_27"
                                android:text="预计候床时间："
                                android:textColor="#666666"
                                android:textSize="@dimen/font_size_primary" />

                            <TextView
                                android:id="@+id/forecast_ordered_time_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dp_25"
                                android:layout_toRightOf="@+id/head_label_tv"
                                android:text="2019-1-29 15:49:55"
                                android:textColor="#FF1E00"
                                android:textSize="@dimen/dp_17" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/head_label_layout"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/dp_22"
                            android:text="候床时间仅供参考，具体收治入院时间以临床科室为准"
                            android:textColor="#BBBBBB"
                            android:textSize="@dimen/dp_12" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_19"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/line_pic" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/primary_bg_color" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_54"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/location_add_name"
                            android:drawablePadding="@dimen/dp_14"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_18"
                            android:text="姓名"
                            android:textColor="#666666"
                            android:textSize="@dimen/font_size_primary" />

                        <com.keydom.ih_common.view.InterceptorEditText
                            android:id="@+id/order_name_edt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:hint=""
                            android:maxLength="20"
                            android:paddingLeft="@dimen/dp_44"
                            android:paddingRight="@dimen/dp_44"
                            android:textColor="#333333"
                            android:textColorHint="#BBBBBB"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_54"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/location_add_phone_icon"
                            android:drawablePadding="@dimen/dp_14"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_18"
                            android:text="电话"
                            android:textColor="#666666"
                            android:textSize="@dimen/font_size_primary" />

                        <com.keydom.ih_common.view.InterceptorEditText
                            android:id="@+id/order_phone_edt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:hint="请输入"
                            android:inputType="number"
                            android:maxLength="11"
                            android:paddingRight="@dimen/dp_44"
                            android:paddingLeft="@dimen/dp_44"
                            android:textColor="#333333"
                            android:textColorHint="#BBBBBB"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_54"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/relationshiper_phone"
                            android:drawablePadding="@dimen/dp_14"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_18"
                            android:text="联系人电话"
                            android:textColor="#666666"
                            android:textSize="@dimen/font_size_primary" />

                        <com.keydom.ih_common.view.InterceptorEditText
                            android:id="@+id/relationshiper_phone_edt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:hint="请输入"
                            android:inputType="number"
                            android:maxLength="11"
                            android:paddingRight="@dimen/dp_44"
                            android:paddingLeft="@dimen/dp_44"
                            android:textColor="#333333"
                            android:textColorHint="#BBBBBB"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_54"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/location_add_region_icon"
                            android:drawablePadding="@dimen/dp_14"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_18"
                            android:text="居住地区"
                            android:textColor="#666666"
                            android:textSize="@dimen/font_size_primary" />

                        <TextView
                            android:id="@+id/order_region_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableRight="@mipmap/exa_report_right"
                            android:drawablePadding="@dimen/dp_16"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/dp_19"
                            android:text="请选择地区"
                            android:textColor="#333333"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_54"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/location_add_address_icon"
                            android:drawablePadding="@dimen/dp_14"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_18"
                            android:text="详细地址"
                            android:textColor="#666666"
                            android:textSize="@dimen/font_size_primary" />

                        <com.keydom.ih_common.view.InterceptorEditText
                            android:id="@+id/order_address_edt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:hint="请输入"
                            android:maxLength="60"
                            android:paddingRight="@dimen/dp_44"
                            android:paddingLeft="@dimen/dp_44"
                            android:textColor="#333333"
                            android:textColorHint="#BBBBBB"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_10"
                        android:background="@color/primary_bg_color" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/click_to_show_more_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_270"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/cover_layer_bg"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/click_to_show_more_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:padding="@dimen/dp_20"
                        android:text="点击展开更多"
                        android:textColor="#3F98F7"
                        android:textSize="@dimen/dp_14" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/order_bottom_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/order_top_layout"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_54"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/cure_service_icon"
                            android:drawablePadding="@dimen/dp_14"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_18"
                            android:text="建议入院科室"
                            android:textColor="#666666"
                            android:textSize="@dimen/font_size_primary" />

                        <com.keydom.ih_common.view.InterceptorEditText
                            android:id="@+id/cure_service_edt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="center_vertical|right"
                            android:hint="请输入"
                            android:paddingLeft="@dimen/dp_44"
                            android:paddingRight="@dimen/dp_44"
                            android:textColor="#333333"
                            android:textColorHint="#BBBBBB"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_54"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:drawableLeft="@mipmap/time"
                            android:drawablePadding="@dimen/dp_14"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/dp_18"
                            android:text="入院证日期"
                            android:textColor="#666666"
                            android:textSize="@dimen/font_size_primary" />

                        <TextView
                            android:id="@+id/order_date_tv"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableRight="@mipmap/exa_report_right"
                            android:drawablePadding="@dimen/dp_16"
                            android:gravity="center_vertical|right"
                            android:paddingRight="@dimen/dp_19"
                            android:text="请选择时间"
                            android:textColor="#333333"
                            android:textSize="@dimen/dp_12" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/heal_care_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_54"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableLeft="@mipmap/cart_type"
                                android:drawablePadding="@dimen/dp_14"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_18"
                                android:text="医保类型"
                                android:textColor="#666666"
                                android:textSize="@dimen/font_size_primary" />

                            <TextView
                                android:id="@+id/order_health_care_type_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableRight="@mipmap/exa_report_right"
                                android:drawablePadding="@dimen/dp_16"
                                android:gravity="center_vertical|right"
                                android:paddingRight="@dimen/dp_19"
                                android:text="请选择"
                                android:textColor="#333333"
                                android:textSize="@dimen/dp_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_54"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableLeft="@mipmap/card_id"
                                android:drawablePadding="@dimen/dp_14"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_18"
                                android:text="医保号"
                                android:textColor="#666666"
                                android:textSize="@dimen/font_size_primary" />

                            <com.keydom.ih_common.view.InterceptorEditText
                                android:id="@+id/health_care_card_num"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:hint="请输入"
                                android:inputType="number"
                                android:paddingRight="@dimen/dp_44"
                                android:paddingLeft="@dimen/dp_44"
                                android:singleLine="true"
                                android:maxLength="20"
                                android:textColor="#333333"
                                android:textColorHint="#BBBBBB"
                                android:textSize="@dimen/dp_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_54"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableLeft="@mipmap/bind_card_card_num_icon"
                                android:drawablePadding="@dimen/dp_14"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_18"
                                android:text="医保来源地"
                                android:textColor="#666666"
                                android:textSize="@dimen/font_size_primary" />

                            <TextView
                                android:id="@+id/order_health_care_region_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableRight="@mipmap/exa_report_right"
                                android:drawablePadding="@dimen/dp_16"
                                android:gravity="center_vertical|right"
                                android:paddingRight="@dimen/dp_19"
                                android:text="请选择"
                                android:textColor="#333333"
                                android:textSize="@dimen/dp_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_54"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableLeft="@mipmap/cure_type_icon"
                                android:drawablePadding="@dimen/dp_14"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_18"
                                android:text="拟结算类型"
                                android:textColor="#666666"
                                android:textSize="@dimen/font_size_primary" />

                            <TextView
                                android:id="@+id/order_settlement_type_tv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:drawableRight="@mipmap/exa_report_right"
                                android:drawablePadding="@dimen/dp_16"
                                android:gravity="center_vertical|right"
                                android:paddingRight="@dimen/dp_19"
                                android:text="请选择"
                                android:textColor="#333333"
                                android:textSize="@dimen/dp_12" />
                        </LinearLayout>

                        <com.keydom.ih_common.view.InterceptorEditText
                            android:id="@+id/order_note_edt"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_144"
                            android:layout_marginLeft="@dimen/dp_19"
                            android:layout_marginTop="@dimen/dp_30"
                            android:layout_marginRight="@dimen/dp_19"
                            android:layout_marginBottom="@dimen/dp_26"
                            android:background="#F9F9F9"
                            android:gravity="top"
                            android:hint="请输入备注"
                            android:paddingLeft="@dimen/dp_13"
                            android:maxLength="100"
                            android:paddingTop="@dimen/dp_17"
                            android:singleLine="false"
                            android:textColor="#333333"
                            android:textColorHint="#BBBBBB"
                            android:textSize="@dimen/font_size_primary" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/report_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_54"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:drawableLeft="@mipmap/apply_date_icon"
                                android:drawablePadding="@dimen/dp_14"
                                android:gravity="center_vertical"
                                android:paddingLeft="@dimen/dp_18"
                                android:text="申请日期"
                                android:textColor="#666666"
                                android:textSize="@dimen/font_size_primary" />

                            <com.keydom.ih_common.view.InterceptorEditText
                                android:id="@+id/apply_date_edt"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@null"
                                android:gravity="center_vertical|right"
                                android:paddingRight="@dimen/dp_44"
                                android:textColor="#FF1E00"
                                android:textColorHint="#BBBBBB"
                                android:textSize="@dimen/dp_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_54"
