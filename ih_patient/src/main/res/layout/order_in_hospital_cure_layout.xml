                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@mipmap/colorful_line" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="@color/primary_bg_color" />

                <TextView
                    android:id="@+id/cure_attention_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_41"
                    android:text="@string/hospital_cure_agreement"
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/remove_order_tv"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_58"
                    android:layout_marginLeft="@dimen/dp_19"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_19"
                    android:layout_marginBottom="@dimen/dp_31"
                    android:background="@mipmap/fill_personal_bt_bg"
