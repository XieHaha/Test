<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <include layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f1f1f1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_14"
                android:paddingTop="@dimen/dp_18"
                android:paddingEnd="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="制定医生"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_9"
                    android:textColor="@color/edit_text_color"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_23"
                    android:text="制定时间"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_9"
                    android:layout_weight="1"
                    android:textColor="@color/edit_text_color"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_18"
                    android:background="@drawable/corner2_stroke_00cafc"
                    android:gravity="center"
                    android:text="健康咨询"
                    android:textColor="#00CAFC"
                    android:textSize="@dimen/sp_10"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f1f1f1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableStart="@mipmap/icon_eat_plan"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="bottom"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_0"
                android:text="饮食方案"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <com.keydom.ih_common.view.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingMultiplier="1.5"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_14"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/color_f1f1f1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableStart="@mipmap/icon_sports_plan"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="bottom"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_0"
                android:text="运动方案"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <com.keydom.ih_common.view.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingMultiplier="1.5"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_14"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/color_f1f1f1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableStart="@mipmap/icon_drug_plan"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="bottom"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_0"
                android:text="用药方案"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <com.keydom.ih_common.view.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingMultiplier="1.5"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_14"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/color_f1f1f1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableStart="@mipmap/icon_sleep_plan"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="bottom"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_0"
                android:text="睡眠作息方案"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <com.keydom.ih_common.view.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingMultiplier="1.5"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_14"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>