<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_302"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    >

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_27"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/diagnoses_apply_dialog_bg">
        <TextView
            android:id="@+id/applu_fee_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/dp_23"
            android:textColor="#FF3C00"
            android:text="￥30.00/次"/>
        <TextView
            android:id="@+id/discount_tv"
            android:layout_below="@+id/applu_fee_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:ellipsize="end"
            android:textSize="@dimen/dp_14"
            android:textColor="#FFC200"
            android:text="复诊患者首次问诊费用5折优惠"/>
        <LinearLayout
            android:id="@+id/doctor_name_layout"
            android:layout_below="@+id/discount_tv"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/doctor_name_tv"
                android:layout_width="wrap_content"
                android:maxWidth="@dimen/dp_100"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_primary"
                android:lines="1"
                android:ellipsize="end"
                android:textColor="#333333"
                android:text="医师 - 唐林"/>
            <TextView
                android:id="@+id/apply_type_tv"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_primary"
                android:textColor="#999999"
                android:text="通过图文进行问诊咨询"/>
        </LinearLayout>

        <TextView
            android:id="@+id/wait_num_tv"
            android:layout_below="@+id/doctor_name_layout"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@mipmap/point_icon_2"
            android:drawablePadding="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/font_size_primary"
            android:textColor="#FFC200"
            android:text="前面排队待诊人数：6人"/>
        <RelativeLayout
            android:id="@+id/insurance_layout"
            android:layout_below="@+id/wait_num_tv"
            android:layout_marginTop="@dimen/dp_23"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_58"
            android:background="#FFEE9B">
            <TextView
                android:id="@+id/service_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_30"
                android:gravity="center_horizontal"
                android:text="已为您购买医疗责任险，最高赔付20万元 《保险条款》"
                android:textColor="#FF3939"
                android:textSize="@dimen/dp_12" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/notice_layout"
            android:layout_below="@+id/insurance_layout"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/agree_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                >
                <TextView
                    android:layout_toRightOf="@+id/notice_ck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="同意"
                    android:textSize="@dimen/font_size_primary"
                    android:textColor="#666666"/>
                <TextView
                    android:id="@+id/notice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="《在线问诊用户协议》"
                    android:textSize="@dimen/font_size_primary"
                    android:textColor="#3F98F7"/>

            </LinearLayout>
            <CheckBox
                android:layout_toLeftOf="@+id/agree_layout"
                android:id="@+id/notice_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleX="0.6"
                android:scaleY="0.6"
                android:layout_marginLeft="@dimen/dp_23" />
        </RelativeLayout>
        <LinearLayout
            android:layout_below="@+id/notice_layout"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/canncel_apply_tv"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_29"
                android:gravity="center"
                android:textSize="@dimen/font_size_primary"
                android:textColor="#FFC200"
                android:background="@drawable/apply_dialog_cancel_bg"
                android:text="取消申请"/>
            <TextView
                android:id="@+id/commit_apply_tv"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_29"
                android:gravity="center"
                android:textSize="@dimen/font_size_primary"
                android:textColor="#FFFFFF"
                android:background="@drawable/apply_dialog_commit_bg"
                android:text="申请"/>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <ImageView
            android:id="@+id/icon_f"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75"
            />

    </LinearLayout>

</RelativeLayout>