<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_302"
    android:layout_height="match_parent"
    android:background="#00FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_27"
        android:background="@drawable/diagnoses_apply_dialog_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/applu_fee_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_60"
            android:ellipsize="end"
            android:lines="1"
            android:text="￥30.00/次"
            android:textColor="#FF3C00"
            android:textSize="@dimen/dp_23" />

        <TextView
            android:id="@+id/diagnoses_apply_layout_vip_tips_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_60"
            android:gravity="center"
            android:lineSpacingExtra="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="会员您好，您的会诊申请将在15分钟内处理，接待医护人员了解病情后将指派对症科室医生30分钟内进行临床迟滞。"
            android:textColor="@color/edit_text_color"
            android:textSize="15sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/discount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:lines="1"
            android:text="复诊患者首次问诊费用5折优惠"
            android:textColor="#FFC200"
            android:textSize="@dimen/dp_14" />

        <LinearLayout
            android:id="@+id/doctor_name_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_25"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/doctor_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="@dimen/dp_100"
                android:text="医师 - 唐林"
                android:textColor="#333333"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/apply_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:text="通过图文进行问诊咨询"
                android:textColor="#999999"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>

        <TextView
            android:id="@+id/wait_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@mipmap/point_icon_2"
            android:drawablePadding="@dimen/dp_10"
            android:text="前面排队待诊人数：6人"
            android:textColor="#FFC200"
            android:textSize="@dimen/font_size_primary" />


        <TextView
            android:id="@+id/service_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="#FFEE9B"
            android:gravity="center"
            android:minHeight="@dimen/dp_58"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="已为您购买医疗责任险，最高赔付20万元 《保险条款》"
            android:textColor="#FF3939"
            android:textSize="@dimen/dp_12" />


        <TextView
            android:id="@+id/diagnoses_apply_layout_vip_no_drugs_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:drawableLeft="@mipmap/point_icon_4"
            android:drawablePadding="@dimen/dp_10"
            android:text="在线问诊不会问您开具精麻类药品"
            android:visibility="gone"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary" />



        <RelativeLayout
            android:id="@+id/notice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/agree_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/notice_ck"
                    android:text="同意"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/notice_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="《在线问诊用户协议》"
                    android:textColor="#3F98F7"
                    android:textSize="@dimen/font_size_primary" />

            </LinearLayout>

            <CheckBox
                android:id="@+id/notice_ck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_23"
                android:layout_toLeftOf="@+id/agree_layout"
                android:scaleX="0.6"
                android:scaleY="0.6" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/notice_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/canncel_apply_tv"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_29"
                android:background="@drawable/apply_dialog_cancel_bg"
                android:gravity="center"
                android:text="取消申请"
                android:textColor="#FFC200"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/commit_apply_tv"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_29"
                android:layout_marginLeft="@dimen/dp_10"
                android:background="@drawable/apply_dialog_commit_bg"
                android:gravity="center"
                android:text="申请"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_f"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_75" />

    </LinearLayout>

</RelativeLayout>