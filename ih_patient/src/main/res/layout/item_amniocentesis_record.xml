<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_25"
    android:paddingEnd="@dimen/dp_25">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/mine_person_message_bg"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_25"
        android:paddingTop="@dimen/dp_20"
        android:paddingEnd="@dimen/dp_25"
        android:paddingBottom="@dimen/dp_35">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_amniocentesis_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold"
                tools:text="名字" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/icon_past_history"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:text="申请时间"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/item_amniocentesis_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="center"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableStart="@mipmap/cart_type"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:text="预约时间"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/item_amniocentesis_reserve_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:gravity="center"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@drawable/dotted_line_v"
            android:layerType="software"
            android:textColor="@color/tab_nol_color" />

        <TextView
            android:id="@+id/item_amniocentesis_operate"
            android:layout_width="@dimen/dp_80"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingTop="@dimen/dp_20"
            android:paddingBottom="@dimen/dp_20"
            android:text="@string/txt_cancel_reserve"
            android:textColor="@color/nursing_status_red"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>
</LinearLayout>
