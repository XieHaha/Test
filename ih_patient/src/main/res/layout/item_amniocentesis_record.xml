<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_amniocentesis_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/item_amniocentesis_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/tab_nol_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/item_amniocentesis_reserve_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/tab_nol_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/item_amniocentesis_reserve_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/tab_nol_color"
        android:textSize="@dimen/sp_14" />

    <TextView
        android:id="@+id/item_amniocentesis_operate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20"
        android:text="@string/txt_cancel_reserve"
        android:textColor="@color/nursing_status_red"
        android:textSize="@dimen/sp_14" />

</LinearLayout>
