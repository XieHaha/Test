<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginEnd="@dimen/dp_10"
    android:background="@drawable/corner5_ffffff_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_18">

    <TextView
        android:id="@+id/item_child_health_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        tools:text="2020年9月25日 15:03:38" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_child_health_age_tv"
        android:layout_marginTop="@dimen/dp_12"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="项目："
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/item_child_health_project_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_6"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12"
            tools:text="体重、身高、头围" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/icon_green_arrow_right_big" />
</RelativeLayout>