<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dp_29">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_17">

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/nursing_project_unselect" />

        <TextView
            android:id="@+id/tv_stage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_18"
            android:minWidth="@dimen/dp_53"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/sp_14"
            tools:text="一周" />

        <View
            android:layout_width="1.5dp"
            android:layout_height="@dimen/dp_17"
            android:layout_marginStart="@dimen/dp_15"
            android:background="@color/primary_font_color" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/sp_14"
            tools:text="2020年2月27日" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_icon_4" />

        <TextView
            android:id="@+id/tv_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_11"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12"
            tools:text="生长体格" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_icon_3" />

        <TextView
            android:id="@+id/tv_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_11"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12"
            tools:text="生长体格" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_71"
        android:layout_marginTop="@dimen/dp_13"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/point_icon_1" />

        <TextView
            android:id="@+id/tv_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_11"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12"
            tools:text="生长体格" />

    </LinearLayout>

</LinearLayout>