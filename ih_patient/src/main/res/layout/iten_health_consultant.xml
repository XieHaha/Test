<?xml version="1.0" encoding="utf-8"?>
<com.keydom.ih_common.view.shadow.ShadowLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp_30"
    android:layout_marginEnd="@dimen/dp_30"
    app:hl_cornerRadius="@dimen/dp_5"
    app:hl_shadowColor="#8CBEEA"
    app:hl_shadowLimit="7.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_87"
        android:background="@drawable/item_health_consultant_bg">

        <ImageView
            android:id="@+id/health_consultant_header_iv"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_18"
            android:src="@mipmap/icon_health_summary_single" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_12"
            android:layout_marginEnd="@dimen/dp_12"
            android:layout_toEndOf="@id/health_consultant_header_iv"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_1"
                android:paddingBottom="@dimen/dp_1">

                <TextView
                    android:id="@+id/health_consultant_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="12"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="名字" />

                <TextView
                    android:id="@+id/health_consultant_history_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_9"
                    android:layout_weight="1"
                    android:text="历史咨询"
                    android:textColor="#1AE17F"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/health_consultant_contact_tv"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_18"
                    android:background="@drawable/selector_health_consultant"
                    android:gravity="center"
                    android:text="健康咨询"
                    android:textColor="@color/select_1ae17f_00cafc_color"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/health_consultant_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/edit_text_color"
                    android:textSize="@dimen/sp_11"
                    tools:text="主治医师" />

                <TextView
                    android:id="@+id/health_consultant_depart_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_9"
                    android:textColor="@color/edit_text_color"
                    android:textSize="@dimen/sp_11"
                    tools:text="健康管理科" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="擅长："
                    android:textColor="@color/edit_text_color"
                    android:textSize="@dimen/sp_11" />

                <TextView
                    android:id="@+id/health_consultant_good_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/edit_text_color"
                    android:textSize="@dimen/sp_11"
                    tools:text="描述描述" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</com.keydom.ih_common.view.shadow.ShadowLayout>