<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_f9_bg_bottom_divider"
    android:orientation="vertical"
    android:paddingTop="21dp"
    android:paddingBottom="23dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_pregnancy_record_is_finish_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/pay_selector" />

        <TextView
            android:id="@+id/item_pregnancy_record_weeks_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25.5dp"
            android:text="怀孕20周"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_pregnancy_record_projects_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="血压、体重、宫底高度、腹围..."
            android:textColor="@color/black"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13.5dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50.5dp"
            android:background="@drawable/corner2_fff4f4_bg"
            android:gravity="center"
            android:paddingStart="@dimen/dp_7"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_5"
            android:text="门诊预约"
            android:textColor="@color/vip_pregnancy_tool_bar_bg"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="|"
            android:textColor="@color/vip_pregnancy_week_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_pregnancy_record_dates_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/vip_pregnancy_week_text"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="13.5dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50.5dp"
            android:background="@drawable/corner2_e9fff4_bg"
            android:gravity="center"
            android:paddingStart="@dimen/dp_7"
            android:paddingTop="@dimen/dp_5"
            android:paddingEnd="@dimen/dp_7"
            android:paddingBottom="@dimen/dp_5"
            android:text="检查预约"
            android:textColor="@color/register_success_color"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="|"
            android:textColor="@color/vip_pregnancy_week_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/item_check_date_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/vip_pregnancy_week_text"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>