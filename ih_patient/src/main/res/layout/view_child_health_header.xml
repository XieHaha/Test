<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_220"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_75"
        android:background="#F6F5F8"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/header_child_health_info_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/corner5_ffffff_bg">

            <ImageView
                android:id="@+id/image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@mipmap/icon_child_health" />

            <LinearLayout
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_toEndOf="@id/image"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="宝宝月龄："
                    android:textColor="#13C2FB"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/header_child_health_age_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#13C2FB"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:text="3月" />

                <TextView
                    android:id="@+id/header_child_health_sex_tv"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_weight="1"
                    android:text=""
                    android:textColor="#13C2FB"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    tools:text="女" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:drawableEnd="@mipmap/icon_blue_arrow_right"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="查看历史"
                    android:textColor="#1EB4FC"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_toEndOf="@id/image">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上次儿保时间："
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/header_child_health_last_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="2020年9月25日" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/corner5_ffffff_bg"
            android:orientation="vertical"
            android:outlineSpotShadowColor="@color/line_color"
            android:paddingStart="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_20">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_17">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="即将进行"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/header_child_health_look_tv"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginStart="@dimen/dp_18"
                    android:background="@drawable/corner3_f0fcff_bg"
                    android:gravity="center"
                    android:text="查看"
                    android:textColor="@color/other_login_color"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_19"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="时间："
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/header_child_health_doing_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="2020年9月25日 15:03:38" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="项目："
                    android:textColor="@color/tab_nol_color"
                    android:textSize="@dimen/sp_12" />


                <TextView
                    android:id="@+id/header_child_health_project_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_6"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="体重、身高、头围" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header_child_health_all_project_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            android:background="@drawable/corner5_ffffff_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_12"
                android:src="@mipmap/icon_child_health_project" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:text="儿保月龄项目"
                android:textColor="#28DCA4"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_10"
                android:drawableEnd="@mipmap/icon_green_arrow_right_small"
                android:drawablePadding="@dimen/dp_5"
                android:gravity="center"
                android:text="查看全部"
                android:textColor="#28DCA4"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@mipmap/mine_person_message_bg">

        <ImageView
            android:id="@+id/mine_user_head_img"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_marginStart="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_20"
            android:scaleType="fitXY"
            android:src="@mipmap/unlogin_uer_head" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_13"
            android:layout_toEndOf="@id/mine_user_head_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mine_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="1"
                android:maxWidth="@dimen/dp_120"
                android:textColor="@color/fontColorPrimary"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold"
                tools:text="名字" />

            <TextView
                android:id="@+id/mine_user_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:text=""
                android:textColor="@color/title_bar_text_color"
                android:textSize="@dimen/sp_12"
                tools:text="卡号:111111" />

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>