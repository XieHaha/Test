<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_60"
    android:layout_marginStart="@dimen/dp_14"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_marginEnd="@dimen/dp_14"
    android:background="@drawable/corner5_f7f7f7_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingStart="@dimen/dp_18"
    android:paddingEnd="@dimen/dp_13">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/txt_health_manager"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        tools:text="心脏搭桥手术" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_weight="1"
        android:textColor="@color/tab_nol_color"
        android:textSize="@dimen/sp_12"
        tools:text="2021-03-12" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:drawableEnd="@mipmap/exa_report_right"
        android:drawablePadding="@dimen/dp_20"
        android:gravity="center"
        android:textColor="@color/nursing_status_red"
        android:textSize="@dimen/sp_12"
        tools:text="已痊愈" />

</LinearLayout>
