<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_231"
            android:background="@drawable/medical_mail_bg"
            android:paddingStart="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_31">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/corner5_bg_ffffff"
                android:orientation="vertical"
                android:paddingStart="@dimen/dp_30"
                android:paddingTop="@dimen/dp_30"
                android:paddingEnd="@dimen/dp_17">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableStart="@mipmap/point_icon_6"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:text="@string/txt_mianyang_hospital"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_medical_apply" />

                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_26"
                    android:layout_marginTop="@dimen/dp_37"
                    android:src="@mipmap/icon_mailing_info" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@mipmap/point_icon_1"
                        android:drawablePadding="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        tools:text="姓名" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_10"
                        android:gravity="center_vertical"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        tools:text="电话" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_28"
                    android:layout_marginTop="@dimen/dp_20"
                    android:textColor="@color/edit_text_color"
                    android:textSize="@dimen/sp_14"
                    tools:text="地址" />

            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_39"
            android:layout_marginTop="@dimen/dp_13"
            android:drawableStart="@mipmap/point_icon_3"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center_vertical"
            android:text="@string/txt_copy_content_detail"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_21"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_65"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_32"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_patient_name"
                android:textColor="@color/edit_hint_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_patient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:gravity="end"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/sp_14"
                tools:text="姓名" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_65"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_32"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_in_hospital_time"
                android:textColor="@color/edit_hint_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_in_hospital_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:gravity="end"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/sp_14"
                tools:text="二〇二〇年三月三日" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_65"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_32"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_copy_quantity"
                android:textColor="@color/edit_hint_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_copy_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:gravity="end"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/sp_14"
                tools:text="111" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_65"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_32"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_recv_type"
                android:textColor="@color/edit_hint_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_recv_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:gravity="end"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/sp_14"
                tools:text="快递" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_65"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_32"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_copy_purpose"
                android:textColor="@color/edit_hint_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_copy_purpose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:gravity="end"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/sp_14"
                tools:text="目的" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_65"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_32"
            android:paddingBottom="@dimen/dp_10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_copy_content"
                android:textColor="@color/edit_hint_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_copy_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_50"
                android:gravity="end"
                android:textColor="@color/primary_font_color"
                android:textSize="@dimen/sp_14"
                tools:text="内容" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_21"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_75"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/dp_22"
            android:paddingEnd="@dimen/dp_20">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_need_pay"
                android:textColor="@color/tab_nol_color"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_weight="1"
                android:textColor="@color/nursing_status_red"
                android:textSize="@dimen/sp_18"
                tools:text="￥8088" />

            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_41"
                android:background="@drawable/corner5_bg_3f98f7"
                android:gravity="center"
                android:text="@string/txt_go_pay"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/sp_16" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>