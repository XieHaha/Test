<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_bg_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_left_right_dp">

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_15"
                android:background="@color/list_tab_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:text="@string/charge_back_rule"
                android:textColor="@color/title_bar_text_color"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/line_color" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/dp_10"
            android:id="@+id/rules"
            android:paddingBottom="@dimen/dp_27"
            android:paddingLeft="@dimen/dp_42"
            android:background="@color/white"
            android:paddingRight="@dimen/dp_29"
            android:paddingTop="@dimen/dp_19"
            android:text="@string/charge_order_rule_content"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/font_size_primary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_left_right_dp">

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="@dimen/dp_15"
                android:background="@color/list_tab_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:text="@string/charge_back_content"
                android:textColor="@color/title_bar_text_color"
                android:textSize="@dimen/font_size_primary" />
        </LinearLayout>


    </LinearLayout>
