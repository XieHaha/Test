<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <ScrollView
        android:id="@+id/new_card_operate_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@color/medical_card_detail_label_bg"
                android:gravity="center"
                android:text="@string/medical_card_detail_label"
                android:textColor="@color/medical_card_detail_label_font"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/bind_card_user_name_icon"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="@string/location_manage_add_name"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.InterceptorEditText
                    android:id="@+id/userName_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="点击输入"
                    android:maxLength="20"
                    android:paddingLeft="@dimen/dp_37"
                    android:paddingRight="@dimen/dp_37"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/sex"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="性别"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/user_sex_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/dp_15"
                    android:text="点击选择"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/national"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="民族"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/user_national_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/dp_15"
                    android:text="点击选择"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/time"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="出生日期"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/user_birth_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/dp_15"
                    android:text="点击选择"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/cart_type"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="证件类型"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/certificate_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/dp_37"
                    android:text="身份证"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/card_id"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="证件号码"
                    android:textColor="@color/title_bar_text_color"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.InterceptorEditText
                    android:id="@+id/certificate_id_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="点击输入"
                    android:maxLength="20"
                    android:paddingRight="@dimen/dp_37"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/other_certificate_address_now_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/location_add_region_icon"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="现住址"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/other_certificate_address_now_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/dp_15"
                    android:text="点击选择"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/other_certificate_address_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/location_add_address_icon"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="详细地址"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.InterceptorEditText
                    android:id="@+id/other_certificate_address_detail_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="点击输入"
                    android:lines="1"
                    android:maxLength="60"
                    android:paddingLeft="@dimen/dp_37"
                    android:paddingRight="@dimen/dp_37"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_card_region_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/location_add_region_icon"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="身份证所在地"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/id_card_region_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/dp_15"
                    android:text="点击选择"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_card_address_detail_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/location_add_address_icon"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="身份证详细地址"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.InterceptorEditText
                    android:id="@+id/di_card_address_detail_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical|right"
                    android:hint="点击输入"
                    android:lines="1"
                    android:maxLength="60"
                    android:paddingLeft="@dimen/dp_37"
                    android:paddingRight="@dimen/dp_37"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/id_card_validity_period_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/bind_card_card_num_icon"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="身份证有效期"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/id_card_validity_period_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableRight="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_10"
                    android:focusable="true"
                    android:gravity="center_vertical|right"
                    android:paddingRight="@dimen/dp_15"
                    android:text="点击选择"
                    android:textColor="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactor_name_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/bind_card_user_name_icon"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="联系人"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.InterceptorEditText
                    android:id="@+id/contactor_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="点击输入"
                    android:maxLength="16"
                    android:paddingLeft="@dimen/dp_37"
                    android:paddingRight="@dimen/dp_37"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactor_phone_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/location_add_phone_icon"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="联系电话"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.InterceptorEditText
                    android:id="@+id/contactor_phone_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="点击输入"
                    android:inputType="number"
                    android:maxLength="11"
                    android:paddingLeft="@dimen/dp_37"
                    android:paddingRight="@dimen/dp_37"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/contactor_relationship_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_60"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/bind_card_card_num_icon"
                    android:drawablePadding="@dimen/dp_16"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_21"
                    android:text="与患者关系"
                    android:textColor="@color/title_bar_text_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.InterceptorEditText
                    android:id="@+id/contactor_relationship_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center_vertical|right"
                    android:hint="点击输入"
                    android:maxLength="20"
                    android:paddingLeft="@dimen/dp_37"
                    android:paddingRight="@dimen/dp_37"
                    android:textColor="@color/color_333333"
                    android:textColorHint="@color/edit_hint_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@mipmap/colorful_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f9f9f9" />

            <TextView
                android:id="@+id/new_card_commit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_58"
                android:layout_marginStart="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_31"
                android:layout_marginEnd="@dimen/dp_19"
                android:background="@mipmap/fill_personal_bt_bg"
                android:gravity="center"
                android:text="提交信息"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dp_17" />

            <TextView
                android:id="@+id/new_card_layout_cancel_commit_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_61"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_18"
                android:layout_marginBottom="@dimen/dp_31"
                android:background="@mipmap/complete_register_bt_bg"
                android:gravity="center"
                android:text="错误，重新上传"
                android:textColor="@color/title_bar_text_color"
                android:textSize="@dimen/dp_17" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/new_card_audit_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/dp_170"
            android:layout_height="@dimen/dp_60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_73"
            android:src="@mipmap/new_card_audit_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:text="审核中"
            android:textColor="#CD8709"
            android:textSize="@dimen/dp_23" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_16"
            android:text="你提交的信息还在审核中，请"
            android:textColor="#E5A42F"
            android:textSize="@dimen/dp_17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_5"
            android:text="耐心等待"
            android:textColor="#E5A42F"
            android:textSize="@dimen/dp_17" />
    </LinearLayout>
</LinearLayout>