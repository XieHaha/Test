<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_10"
    android:paddingEnd="@dimen/dp_10">

    <include layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f9f9f9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_14"
                android:paddingTop="@dimen/dp_18"
                android:paddingEnd="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_18">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_9"
                    android:drawableStart="@mipmap/icon_health_doctor"
                    android:drawablePadding="@dimen/dp_8"
                    android:gravity="center"
                    android:textColor="#4FA2FA"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="姓名" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="@dimen/dp_9"
                    android:drawableStart="@mipmap/icon_health_time"
                    android:drawablePadding="@dimen/dp_8"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:text="2021年3月26日 15:05:56" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/color_f1f1f1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:drawableStart="@mipmap/icon_health_status"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="bottom"
                    android:paddingStart="@dimen/dp_14"
                    android:paddingEnd="@dimen/dp_0"
                    android:text="健康状况"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/color_f9f9f9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableStart="@mipmap/icon_health_notice"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_0"
                android:text="关键指标异常统计"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_18"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:background="#F61717" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_7"
                    android:text="风险次数"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:layout_width="@dimen/dp_8"
                    android:layout_height="@dimen/dp_8"
                    android:layout_marginStart="@dimen/dp_33"
                    android:background="#00D394" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_7"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:text="风险线（15次）"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="@dimen/sp_12" />
            </LinearLayout>

            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/health_summary_detail_combined_chart"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_150"
                android:layout_marginStart="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_25"
                android:layout_marginEnd="@dimen/dp_35" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_38"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血压风险数:"
                        android:textColor="@color/edit_text_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/edit_text_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="15次" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00D394"
                        android:textSize="@dimen/sp_12"
                        tools:text="【低风险】" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血糖风险数:"
                        android:textColor="@color/edit_text_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/edit_text_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="15次" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#00D394"
                        android:textSize="@dimen/sp_12"
                        tools:text="【低风险】" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_15"
                android:paddingEnd="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血压风险数:"
                        android:textColor="@color/edit_text_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/edit_text_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="15次" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F61717"
                        android:textSize="@dimen/sp_12"
                        tools:text="【高风险】" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血糖风险数:"
                        android:textColor="@color/edit_text_color"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/edit_text_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="15次" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#F61717"
                        android:textSize="@dimen/sp_12"
                        tools:text="【高风险】" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/color_f9f9f9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableStart="@mipmap/icon_health_grade"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_0"
                android:text="生活方式评分"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <com.github.mikephil.charting.charts.RadarChart
                android:id="@+id/health_summary_detail_radar_chart"
                android:layout_width="match_parent"
                android:layout_height="360dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f9f9f9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableStart="@mipmap/icon_health_content"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_0"
                android:text="总结内容"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <com.keydom.ih_common.view.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingMultiplier="1.5"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_14"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/color_f9f9f9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableStart="@mipmap/icon_health_notice"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_0"
                android:text="注意事项"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <com.keydom.ih_common.view.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingMultiplier="1.5"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_14"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:drawableStart="@mipmap/icon_health_hint"
                android:drawablePadding="@dimen/dp_10"
                android:gravity="center"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_0"
                android:text="温馨提示"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_18"
                android:textStyle="bold" />

            <com.keydom.ih_common.view.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:lineSpacingMultiplier="1.5"
                android:paddingStart="@dimen/dp_14"
                android:paddingEnd="@dimen/dp_14"
                android:textColor="@color/edit_text_color"
                android:textSize="@dimen/sp_14" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginEnd="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_17"
                android:background="@drawable/corner5_btn_health_public"
                android:gravity="center"
                android:text="查看干预方案"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>