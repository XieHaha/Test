<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49">
        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:textSize="@dimen/font_size_primary"
            android:textColor="#333333"
            android:textStyle="bold"
            android:text="张三"/>
        <TextView
            android:id="@+id/remove_register_tv"
            android:background="@drawable/diagnosis_btn_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_19"
            android:drawableLeft="@mipmap/diagnosis_icon"
            android:paddingBottom="@dimen/dp_6"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            android:drawablePadding="@dimen/dp_6"
            android:textSize="@dimen/font_size_primary"
            android:textColor="#3F98F7"
            android:text="退号"/>

        <TextView
            android:id="@+id/pay_tv"
            android:background="@drawable/order_pay_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/remove_register_tv"
            android:layout_marginRight="@dimen/dp_19"
            android:drawableLeft="@mipmap/go_pay_icon"
            android:paddingBottom="@dimen/dp_6"
            android:paddingTop="@dimen/dp_6"
            android:paddingRight="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_12"
            android:drawablePadding="@dimen/dp_6"
            android:textSize="@dimen/font_size_primary"
            android:textColor="#FF3939"
            android:text="支付"/>

        <LinearLayout
            android:id="@+id/state_layout"
            android:visibility="gone"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/nursing_status_iv"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_10"
                android:src="@drawable/circle_gray" />
            <TextView
                android:id="@+id/state_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/circle_gray"
                android:paddingBottom="@dimen/dp_6"
                android:paddingTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_1"
                android:drawablePadding="@dimen/dp_6"
                android:textSize="@dimen/font_size_primary"
                android:textColor="@color/tab_nol_color"
                android:text="已退单"/>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_time_tv"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:text="2018-09-12（上午）"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="科室:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_department_tv"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:text="儿科门诊"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医生:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_doctor_tv"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:text="杨沛"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_remark_tv"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_30"
            android:text="请于上午8:00-9:00到医院就诊"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_22"
        android:background="@mipmap/colorful_line"/>
</LinearLayout>