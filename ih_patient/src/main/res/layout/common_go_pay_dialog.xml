<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_58">
        <ImageView
            android:id="@+id/close_img"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            android:layout_centerVertical="true"
            android:padding="@dimen/dp_5"
            android:src="@mipmap/pay_close_icon"
            android:layout_marginStart="@dimen/dp_16"/>
        <TextView
            android:id="@+id/order_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_20"
            android:textColor="@color/nursing_status_red"
            android:text="元"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="#F2F2F2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_20"
            android:text="选择支付方式"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/order_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dp_21"
            android:textColor="#3F98F7"
            android:textSize="@dimen/font_size_primary"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/common_go_pay_dialog_ali_root_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_63">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_19"
            android:src="@mipmap/ali_pay_icon"/>
        <TextView
            android:id="@+id/ali_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_105"
            android:text="支付宝支付"
            android:textSize="@dimen/font_size_primary"
            android:textColor="#7FBDFF"/>
        <ImageView
            android:id="@+id/ali_pay_selected_img"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dp_45"
            android:src="@drawable/pay_selector"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#EEEEEE"
            android:layout_marginStart="@dimen/dp_92"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/common_go_pay_dialog_wechat_root_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_63">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_19"
            android:src="@mipmap/wechat_pay_icon"/>
        <TextView
            android:id="@+id/wechat_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_105"
            android:text="微信支付"
            android:textSize="@dimen/font_size_primary"
            android:textColor="#666666"/>
        <ImageView
            android:id="@+id/wechat_pay_selected_img"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dp_45"
            android:src="@drawable/pay_selector"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="#EEEEEE"
            android:layout_marginStart="@dimen/dp_92"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/pay_commit"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_height="@dimen/dp_52"
        android:layout_marginStart="@dimen/dp_21"
        android:layout_marginEnd="@dimen/dp_21"
        android:layout_marginBottom="@dimen/dp_50"
        android:textSize="@dimen/dp_17"
        android:textColor="@color/primary_color"
        android:gravity="center"
        android:text="去支付"
        android:background="@mipmap/pay_commit_bg"/>
</LinearLayout>