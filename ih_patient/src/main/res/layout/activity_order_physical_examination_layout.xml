<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_122"
                android:src="@mipmap/physical_exa_head_icon" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F9F9F9" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_77">

                <RelativeLayout
                    android:id="@+id/single_order_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/single_img"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_23"
                        android:src="@mipmap/team_order_icon" />

                    <TextView
                        android:id="@+id/single_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_toEndOf="@+id/single_img"
                        android:text="个体体检"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/team_order_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/team_img"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_23"
                        android:src="@mipmap/team_order_icon" />

                    <TextView
                        android:id="@+id/team_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_toRightOf="@+id/team_img"
                        android:text="团体体检"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_77">


                <RelativeLayout
                    android:id="@+id/personal_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/personal_img"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_23"
                        android:src="@mipmap/team_order_icon" />

                    <TextView
                        android:id="@+id/personal_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_toEndOf="@+id/personal_img"
                        android:text="个性化体检"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/report_query_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/report_query_img"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_23"
                        android:src="@mipmap/reporting_queries_icon" />

                    <TextView
                        android:id="@+id/report_query_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_toEndOf="@+id/report_query_img"
                        android:text="体检报表"
                        android:textColor="#333333"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F9F9F9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_136"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/exa_center_layout"
                    android:layout_width="@dimen/dp_152"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_30"
                        android:src="@mipmap/exa_centry_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="体检中心介绍"
                        android:textColor="#666666"
                        android:textSize="@dimen/sp_14" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/exa_center_layout"
                    android:background="#F9F9F9" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/exa_center_layout"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/exa_notice_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/exa_notice_img"
                            android:layout_width="@dimen/dp_48"
                            android:layout_height="@dimen/dp_48"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_13"
                            android:src="@mipmap/physical_exa_notice_icon" />

                        <TextView
                            android:id="@+id/exa_notice_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_toEndOf="@+id/exa_notice_img"
                            android:text="体检须知"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/exa_notice_tv"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_toEndOf="@+id/exa_notice_img"
                            android:text="体检前准备注意事项"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/exa_process_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/exa_process_img"
                            android:layout_width="@dimen/dp_48"
                            android:layout_height="@dimen/dp_48"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_13"
                            android:src="@mipmap/physical_exa_process_icon" />

                        <TextView
                            android:id="@+id/exa_process_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_15"
                            android:layout_toEndOf="@+id/exa_process_img"
                            android:text="体检流程"
                            android:textColor="#333333"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/exa_process_tv"
                            android:layout_marginStart="@dimen/dp_8"
                            android:layout_marginTop="@dimen/dp_2"
                            android:layout_toEndOf="@+id/exa_process_img"
                            android:text="体检中各项流程须知"
                            android:textColor="#999999"
                            android:textSize="@dimen/sp_12" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F9F9F9" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_51"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/function_config_second_icon"
                android:drawableLeft="@mipmap/title_left_icon"
                android:drawablePadding="@dimen/dp_6"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_19"
                android:text="体检套餐"
                android:textColor="@color/fontColorPrimary"
                android:textSize="@dimen/sp_14"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="#F9F9F9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:descendantFocusability="blocksDescendants"
                android:visibility="gone">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/physical_exa_package_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

                <TextView
                    android:id="@+id/err_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_color"
                    android:gravity="center"
                    android:paddingTop="@dimen/dp_20"
                    android:paddingBottom="@dimen/dp_20"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_14"
                    android:visibility="gone" />
            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>