<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/item_line_bg_bottom_divider"
    android:paddingLeft="@dimen/padding_left_right_dp"
    android:paddingRight="@dimen/padding_left_right_dp"
    android:layout_height="@dimen/dp_52">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_9"
        android:textSize="@dimen/font_size_primary"
        android:textColor="@color/title_bar_text_color"
        android:id="@+id/service_no"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_9"
        android:textSize="@dimen/font_size_primary"
        android:id="@+id/service_state"
        />
    <ImageView
        android:layout_width="@dimen/dp_9"
        android:layout_height="@dimen/dp_15"
        android:id="@+id/service_icon"
        android:src="@mipmap/exa_report_down"
        />
</LinearLayout>