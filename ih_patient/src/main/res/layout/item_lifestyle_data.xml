<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_65"
    android:background="@drawable/item_f9_bg_bottom_divider"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_lifestyle_data_icon_iv"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_23"
        android:src="@drawable/bg_default_photo" />

    <TextView
        android:id="@+id/item_lifestyle_data_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_toEndOf="@id/item_lifestyle_data_icon_iv"
        android:gravity="center"
        android:textColor="@color/select_333333_57a7fc_color"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        tools:text="名称" />

    <TextView
        android:id="@+id/item_lifestyle_data_quantity_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_toEndOf="@id/item_lifestyle_data_name_tv"
        android:textColor="@color/tab_nol_color"
        android:textSize="@dimen/sp_14"
        tools:text="1份  200克" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:paddingStart="@dimen/dp_0"
        android:paddingEnd="@dimen/dp_55">

        <TextView
            android:id="@+id/item_lifestyle_data_calories_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12"
            tools:text="100千卡" />

        <ImageView
            android:id="@+id/item_lifestyle_data_select_iv"
            android:layout_width="@dimen/dp_21"
            android:layout_height="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_18"
            android:src="@mipmap/hospital_item_select"
            android:visibility="invisible" />
    </LinearLayout>
</RelativeLayout>