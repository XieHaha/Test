<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">
    <include layout="@layout/common_title_bar"/>
    <LinearLayout
        android:id="@+id/order_exa_base_layout"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_f9f9f9" />
        <RelativeLayout
            android:id="@+id/card_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_77">
            <RelativeLayout
                android:id="@+id/head_layout"
                android:layout_width="@dimen/dp_52"
                android:layout_height="@dimen/dp_52"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_centerVertical="true"
                android:background="@mipmap/order_head_img_bg"
               >
                <com.keydom.ih_common.view.CircleImageView
                    android:id="@+id/order_doctor_img"
                    android:layout_width="@dimen/dp_45"
                    android:layout_height="@dimen/dp_45"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginTop="@dimen/dp_4"
                    android:padding="@dimen/dp_10"
                    android:src="@mipmap/order_doctor_icon"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/order_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/head_layout"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_20"
                android:textSize="@dimen/dp_15"
                android:maxWidth="@dimen/dp_120"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="#666666"/>
            <TextView
                android:id="@+id/order_card_num"
                android:layout_below="@+id/order_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/head_layout"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="就诊卡号：020000648095"
                android:textSize="@dimen/dp_12"
                android:textColor="#999999"/>
            <ImageView
                android:id="@+id/order_doc_down_img"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_45"
                android:padding="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_36"
                android:src="@mipmap/arrow_bottom"/>
            <TextView
                android:id="@+id/no_card_tv"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@color/primary_color"
                android:textSize="@dimen/font_size_primary"
                android:textColor="#999999"
                android:text="您还没有绑定就诊卡，请先绑定"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@color/color_f9f9f9" />
        <android.support.design.widget.TabLayout
            android:id="@+id/examination_order_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            app:tabSelectedTextColor="@color/other_login_color"
            app:tabTextColor="@color/tab_nol_color"
            app:tabIndicatorColor="@color/other_login_color">

        </android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:id="@+id/examination_order_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v4.view.ViewPager>
    </LinearLayout>

</LinearLayout>