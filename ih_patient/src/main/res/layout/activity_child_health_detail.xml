<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/line_color" />


    <com.ganxin.library.LoadDataLayout
        android:id="@+id/loadDataLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.keydom.ih_common.view.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_29"
                    android:paddingTop="@dimen/dp_24"
                    android:paddingEnd="@dimen/dp_29">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@mipmap/icon_date"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center"
                        android:text="@string/txt_reserve_time"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_select_time"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginStart="@dimen/dp_22"
                        android:layout_weight="1"
                        android:background="@drawable/corner5_stroke_eeeeee"
                        android:drawableEnd="@mipmap/icon_date"
                        android:gravity="center_vertical"
                        android:hint="@string/txt_select_time_hint"
                        android:paddingStart="@dimen/dp_14"
                        android:paddingEnd="@dimen/dp_9"
                        android:textColor="@color/vip_detail_balance_number_text"
                        android:textColorHint="@color/edit_hint_color"
                        android:textSize="@dimen/sp_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_29"
                    android:paddingTop="@dimen/dp_21"
                    android:paddingEnd="@dimen/dp_29">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@mipmap/icon_date"
                        android:drawablePadding="@dimen/dp_15"
                        android:gravity="center"
                        android:text="@string/txt_childcare_address"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/sp_14" />

                    <TextView
                        android:id="@+id/tv_hospital_name"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_32"
                        android:layout_marginStart="@dimen/dp_22"
                        android:gravity="center_vertical"
                        android:textColor="@color/vip_detail_balance_number_text"
                        android:textSize="@dimen/sp_14"
                        tools:text="医院名称" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_reserve"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginStart="@dimen/dp_24"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_24"
                    android:background="@mipmap/pay_commit_bg"
                    android:gravity="center"
                    android:text="@string/txt_reserve"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/sp_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_28"
                    android:background="@color/primary_bg_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_75"
                    android:gravity="center_vertical"
                    android:paddingStart="@dimen/dp_29"
                    android:paddingEnd="@dimen/dp_29">

                    <ImageView
                        android:id="@+id/iv_avatar"
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:src="@drawable/bg_default_photo_round" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_24"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/sp_14"
                        tools:text="姓名" />


                    <TextView
                        android:id="@+id/tv_sex_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_28"
                        android:textColor="@color/title_bar_text_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="性别、年龄" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/line_color" />

                <com.keydom.ih_patient.view.ChildCareItemLayout
                    android:id="@+id/layout_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingEnd="@dimen/dp_16"
                    app:item_image="@mipmap/point_icon_4"
                    app:item_title="@string/txt_growth_and_development" />

                <com.keydom.ih_patient.view.ChildCareItemLayout
                    android:id="@+id/layout_two"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingEnd="@dimen/dp_16"
                    app:item_image="@mipmap/point_icon_3"
                    app:item_title="@string/txt_physical" />

                <com.keydom.ih_patient.view.ChildCareItemLayout
                    android:id="@+id/layout_three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingEnd="@dimen/dp_16"
                    app:item_image="@mipmap/point_icon_1"
                    app:item_title="@string/txt_growth_and_development_other" />

                <com.keydom.ih_patient.view.ChildCareItemLayout
                    android:id="@+id/layout_four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_30"
                    android:paddingEnd="@dimen/dp_16"
                    app:item_image="@mipmap/point_icon_6"
                    app:item_title="@string/txt_precautions" />

            </LinearLayout>

        </com.keydom.ih_common.view.MyScrollView>

    </com.ganxin.library.LoadDataLayout>

</LinearLayout>