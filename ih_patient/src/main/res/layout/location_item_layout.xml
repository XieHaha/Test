<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f9f9f9"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_104">
        <TextView
            android:id="@+id/location_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_19"
            android:textSize="@dimen/font_size_primary"
            android:textColor="@color/color_333333"/>
        <TextView
            android:id="@+id/location_phone_tv"
            android:layout_toRightOf="@+id/location_name_tv"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15925867864"
            android:textSize="@dimen/font_size_primary"
            android:textColor="@color/color_333333"/>
        <TextView
            android:id="@+id/location_address_tv"
            android:layout_below="@+id/location_name_tv"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_5"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/tab_nol_color"
            android:text="四川省成都市高新区天府大道1600号天府软件园C11栋2201"
            android:lines="1"
            android:ellipsize="end"
            android:paddingRight="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/line"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@+id/location_address_tv"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_f9f9f9"/>
        <CheckBox
            android:id="@+id/location_manage_default_cb"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_below="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/location_manage_set_default_location"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/fontColorDirection"
            android:button="@drawable/location_manage_checkbox_button"/>
        <TextView
            android:background="@drawable/location_manage_editor_bg"
            android:id="@+id/location_manage_delete"
            android:layout_below="@+id/line"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/location_manage_delete"
            android:drawablePadding="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingRight="@dimen/dp_12"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/tab_nol_color"
            android:text="@string/location_manage_delete"/>
        <TextView
            android:background="@drawable/location_manage_editor_bg"
            android:id="@+id/location_manage_edit"
            android:layout_toLeftOf="@+id/location_manage_delete"
            android:layout_below="@+id/line"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/location_manage_edit"
            android:drawablePadding="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="@dimen/dp_3"
            android:paddingBottom="@dimen/dp_3"
            android:paddingRight="@dimen/dp_12"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/tab_nol_color"
            android:text="@string/location_manage_edit"/>
        <ImageView
            android:id="@+id/checked_default_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:background="@mipmap/colorful_line"
            android:layout_alignParentBottom="true"
            android:visibility="gone"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f9f9f9"/>
</LinearLayout>