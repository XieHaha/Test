<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f9f9f9" />

    <com.keydom.mianren.ih_patient.view.RatingBarView
        android:id="@+id/evaluate_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_37"
        app:starCount="5"
        app:starImageSize="@dimen/dp_27"
        app:starFill="@mipmap/evaluate_icon_select"
        app:starEmpty="@mipmap/evaluate_icon_unselect"
         />

    <TextView
        android:id="@+id/evaluate_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:textColor="@color/evaluate_color"
        android:textSize="@dimen/font_size_primary" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_40"
        android:background="@color/line_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/dp_47"
        android:paddingRight="@dimen/dp_47"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/evaluate1"
            android:textSize="@dimen/font_size_auxiliary"
            android:background="@drawable/evaluate_background_selector"
            android:textColor="@color/evaluate_text_color"
            android:text="就诊等待"
            android:paddingLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_34"
            android:gravity="center"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluate2"
            android:layout_alignBottom="@+id/evaluate1"
            android:layout_alignParentRight="true"
            android:background="@drawable/evaluate_background_selector"
            android:textColor="@color/evaluate_text_color"
            android:text="医生态度"
            android:textSize="@dimen/font_size_auxiliary"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_12"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluate3"
            android:layout_below="@+id/evaluate1"
            android:background="@drawable/evaluate_background_selector"
            android:textColor="@color/evaluate_text_color"
            android:textSize="@dimen/font_size_auxiliary"
            android:text="医疗水平"
            android:layout_marginTop="24dp"
            android:paddingLeft="@dimen/dp_12"
            android:gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/evaluate4"
            android:layout_alignBottom="@+id/evaluate3"
            android:layout_alignParentRight="true"
            android:background="@drawable/evaluate_background_selector"
            android:textSize="@dimen/font_size_auxiliary"
            android:textColor="@color/evaluate_text_color"
            android:text="费用有待减少"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_12"
            />
    </RelativeLayout>
</LinearLayout>