<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_77"
    android:id="@+id/item_layout">

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_22"
        android:background="@mipmap/order_head_img_bg">

        <com.keydom.ih_common.view.CircleImageView
            android:id="@+id/order_doctor_img"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/order_doctor_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/order_doc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toRightOf="@+id/head_layout"
        android:lines="1"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_100"
        android:textColor="#666666"
        android:textSize="@dimen/dp_15" />

    <TextView
        android:id="@+id/sex_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_toRightOf="@+id/order_doc_name"
        android:drawableLeft="@mipmap/mine_sex_unlogin"
        android:drawablePadding="@dimen/dp_5"
        android:text="女"
        android:textColor="#999999"
        android:textSize="@dimen/dp_12" />

    <TextView
        android:id="@+id/order_card_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/order_doc_name"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_toRightOf="@+id/head_layout"
        android:lines="1"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_200"
        android:text="身份证号："
        android:textColor="#999999"
        android:textSize="@dimen/dp_12" />

    <RelativeLayout
        android:id="@+id/select_bg_layout"
        android:layout_width="@dimen/dp_34"
        android:layout_height="@dimen/dp_34"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_18"
        android:background="@mipmap/card_selected_bg">

        <ImageView
            android:id="@+id/card_selected_img"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerInParent="true"
            android:src="@mipmap/card_selected_icon" />
    </RelativeLayout>


</RelativeLayout>