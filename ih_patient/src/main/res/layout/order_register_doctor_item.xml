<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_76">

    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_15"
        android:background="@mipmap/order_head_img_bg">

        <com.keydom.ih_common.view.CircleImageView
            android:id="@+id/order_doctor_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginStart="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@mipmap/order_doctor_icon" />
    </RelativeLayout>

    <TextView
        android:id="@+id/doctor_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_toEndOf="@+id/head_layout"
        android:ellipsize="end"
        android:maxWidth="@dimen/dp_70"
        android:singleLine="true"
        android:text=""
        android:textColor="#666666"
        android:textSize="@dimen/sp_15" />

    <TextView
        android:id="@+id/main_doctor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_toEndOf="@+id/doctor_name_tv"
        android:background="#FFEDED"
        android:paddingLeft="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_2"
        android:text="主任医师"
        android:textColor="#FF3939"
        android:textSize="@dimen/sp_9" />

    <TextView
        android:id="@+id/hot_doctor_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_toEndOf="@+id/main_doctor_label"
        android:background="#DDFFED"
        android:paddingLeft="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingRight="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_2"
        android:text="热门医师"
        android:textColor="#22E17E"
        android:textSize="@dimen/sp_9" />

    <TextView
        android:id="@+id/doctor_dsc_tv"
        android:layout_width="@dimen/dp_146"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_name_tv"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toEndOf="@+id/head_layout"
        android:ellipsize="end"
        android:lines="1"
        android:text=""
        android:textColor="#999999"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/doctor_ishave_registered_tv"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_31"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text=""
        android:textColor="@color/primary_color"
        android:textSize="@dimen/sp_14"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/doctor_is_selected_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:src="@drawable/selector_check_iv"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignParentBottom="true"
        android:background="#F5F5F5" />
</RelativeLayout>