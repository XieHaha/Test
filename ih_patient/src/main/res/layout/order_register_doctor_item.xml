<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_76">
    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_48"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_centerVertical="true"
        android:background="@mipmap/order_head_img_bg"
        >
        <com.keydom.ih_common.view.CircleImageView
            android:id="@+id/order_doctor_img"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:src="@mipmap/order_doctor_icon"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/doctor_name_tv"
        android:layout_toRightOf="@+id/head_layout"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:maxWidth="@dimen/dp_70"
        android:singleLine="true"
        android:ellipsize="end"
        android:textColor="#666666"
        android:textSize="@dimen/dp_15"/>
    <TextView
        android:id="@+id/main_doctor_label"
        android:layout_toRightOf="@+id/doctor_name_tv"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:background="#FFEDED"
        android:text="主任医师"
        android:textSize="@dimen/dp_9"
        android:textColor="#FF3939"/>
    <TextView
        android:id="@+id/hot_doctor_label"
        android:layout_toRightOf="@+id/main_doctor_label"
        android:layout_marginTop="@dimen/dp_18"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_4"
        android:paddingRight="@dimen/dp_4"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"
        android:background="#DDFFED"
        android:text="热门医师"
        android:textSize="@dimen/dp_9"
        android:textColor="#22E17E"/>
    <TextView
        android:id="@+id/doctor_dsc_tv"
        android:layout_below="@+id/doctor_name_tv"
        android:layout_toRightOf="@+id/head_layout"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_width="@dimen/dp_146"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp_12"
        android:textColor="#999999"
        android:lines="1"
        android:ellipsize="end"
        android:text=""/>
    <TextView
        android:id="@+id/doctor_ishave_registered_tv"
        android:layout_width="@dimen/dp_72"
        android:layout_height="@dimen/dp_31"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_20"
        android:background="@drawable/login_btn"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/font_size_primary"
        android:textColor="@color/primary_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#F5F5F5"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>