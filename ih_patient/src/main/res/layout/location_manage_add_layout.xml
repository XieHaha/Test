<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout

        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/primary_color">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:id="@+id/tvCenterTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="标题"
                android:textColor="@color/fontColorNavigate"
                android:textSize="@dimen/dp_20" />
            <ImageView
                android:id="@+id/right_close_img"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:padding="@dimen/dp_5"
                android:gravity="center"
                android:layout_marginEnd="@dimen/dp_22"
                android:src="@drawable/location_manage_close"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true" />

        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:background="@color/location_add_label"
            android:text="@string/location_manage_add_label"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_13"
            android:textColor="@color/location_add_label_fond"
            android:textSize="@dimen/font_size_primary"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_21"
                android:drawableLeft="@mipmap/location_add_name"
                android:textColor="@color/title_bar_text_color"
                android:textSize="@dimen/font_size_primary"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_16"
                android:text="@string/location_manage_add_name"/>
            <com.keydom.ih_common.view.InterceptorEditText
                android:id="@+id/add_name_edt"
                android:layout_marginLeft="@dimen/dp_147"
                android:background="@null"
                android:hint="@string/location_manage_add_name_hint"
                android:singleLine="true"
                android:paddingRight="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:textSize="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_2"
                android:maxLength="12"
                android:textColor="@color/fontColorInterval"
                android:textColorHint="@color/fontColorDirection"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_21"
                android:drawableLeft="@mipmap/location_add_phone_icon"
                android:textColor="@color/title_bar_text_color"
                android:textSize="@dimen/font_size_primary"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_16"
                android:text="@string/location_manage_add_phone"/>
            <com.keydom.ih_common.view.InterceptorEditText
                android:id="@+id/add_phone_edt"
                android:layout_marginLeft="@dimen/dp_147"
                android:background="@null"
                android:hint="@string/location_manage_add_phone_hint"
                android:gravity="center|end"
                android:singleLine="true"
                android:paddingRight="@dimen/dp_12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="11"
                android:textSize="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_2"
                android:textColor="@color/fontColorInterval"
                android:textColorHint="@color/fontColorDirection"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_region_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_21"
                android:drawableLeft="@mipmap/location_add_name"
                android:textColor="@color/title_bar_text_color"
                android:textSize="@dimen/font_size_primary"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_16"
                android:text="@string/location_manage_add_region"/>
            <TextView
                android:id="@+id/add_region_choose_tv"

                android:hint="@string/location_manage_add_name_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="点击选择地区"
                android:gravity="center_vertical|right"
                android:textSize="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_2"
                android:drawableRight="@mipmap/exa_report_right"
                android:paddingRight="@dimen/dp_19"
                android:drawablePadding="@dimen/dp_16"
                android:textColor="@color/fontColorInterval"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_59"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/add_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/dp_21"
                android:drawableLeft="@mipmap/location_add_address_icon"
                android:textColor="@color/title_bar_text_color"
                android:textSize="@dimen/font_size_primary"
                android:gravity="center_vertical"
                android:drawablePadding="@dimen/dp_16"
                android:text="@string/location_manage_add_address"/>
            <com.keydom.ih_common.view.InterceptorEditText
                android:id="@+id/add_address_edt"
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@null"
                android:singleLine="true"
                android:hint="@string/location_manage_add_address_hint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|end"
                android:paddingRight="@dimen/dp_12"
                android:textSize="@dimen/dp_12"
                android:paddingLeft="@dimen/dp_2"
                android:lines="1"
                android:maxLength="60"
                android:textColor="@color/fontColorInterval"
                android:textColorHint="@color/fontColorDirection"/>
        </LinearLayout>
        <TextView
            android:id="@+id/location_add_commit"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_58"
            android:layout_marginLeft="@dimen/dp_19"
            android:layout_marginEnd="@dimen/dp_19"
            android:layout_marginTop="@dimen/dp_17"
            android:gravity="center"
            android:textSize="@dimen/dp_17"
            android:textColor="@color/primary_color"
            android:background="@mipmap/fill_personal_bt_bg"
            android:text="@string/location_manage_add_commit_add"
            android:layout_marginBottom="@dimen/dp_25"/>
    </LinearLayout>
</RelativeLayout>

