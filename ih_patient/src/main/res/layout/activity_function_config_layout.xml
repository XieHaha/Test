<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color">

   <include layout="@layout/common_title_bar"/>
   <android.support.v4.widget.NestedScrollView
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">

   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_10"
      android:background="@color/color_f9f9f9"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_42">
      <ImageView
          android:id="@+id/function_config_left_icon"
          android:layout_width="@dimen/dp_2"
          android:layout_height="@dimen/dp_18"
          android:layout_marginStart="@dimen/dp_19"
          android:layout_centerVertical="true"
          android:src="@mipmap/title_left_icon"/>
      <TextView
          android:id="@+id/function_confing_label"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dp_6"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/function_config_left_icon"
          android:text="@string/function_config_label_top_base"
          android:textSize="@dimen/font_size_primary"
          android:textColor="@color/fontColorPrimary"/>
      <TextView
          android:layout_toRightOf="@+id/function_confing_label"
          android:layout_centerVertical="true"
          android:layout_marginStart="@dimen/dp_8"
          android:id="@+id/my_func_hint_tv"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="@color/fontColorDirection"
          android:textSize="@dimen/dp_12"
          android:visibility="gone"
          android:text="@string/function_config_hint"/>
      <TextView
          android:background="@drawable/function_editor_bg"
          android:id="@+id/function_config_editor_tv"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_marginEnd="@dimen/dp_19"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:drawableLeft="@mipmap/editoer"
          android:drawablePadding="@dimen/dp_9"
          android:paddingLeft="@dimen/dp_12"
          android:paddingTop="@dimen/dp_5"
          android:paddingBottom="@dimen/dp_5"
          android:paddingRight="@dimen/dp_12"
          android:textSize="@dimen/dp_12"
          android:textColor="#3F98F7"
          android:text="@string/function_config_editor"/>
   </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_1"
       android:layout_marginEnd="@dimen/dp_19"
       android:layout_marginStart="@dimen/dp_19"
       android:background="@color/color_f9f9f9"/>
   <android.support.v7.widget.RecyclerView
       android:layout_marginTop="@dimen/dp_14"
       android:layout_marginBottom="@dimen/dp_14"
       android:id="@+id/selected_function_rv"
       android:layout_marginStart="@dimen/dp_19"
       android:layout_marginEnd="@dimen/dp_19"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:overScrollMode="never"/>
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_10"
       android:background="@color/color_f9f9f9"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_42">
      <ImageView
          android:id="@+id/function_config_second_icon"
          android:layout_width="@dimen/dp_2"
          android:layout_height="@dimen/dp_18"
          android:layout_marginStart="@dimen/dp_19"
          android:layout_centerVertical="true"
          android:src="@mipmap/title_left_icon"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/dp_6"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@+id/function_config_second_icon"
          android:text="@string/function_config_label_bottom"
          android:textSize="@dimen/font_size_primary"
          android:textColor="@color/fontColorPrimary"/>
   </RelativeLayout>
   <View
       android:layout_width="match_parent"
       android:layout_height="@dimen/dp_1"
       android:layout_marginEnd="@dimen/dp_19"
       android:layout_marginStart="@dimen/dp_19"
       android:background="@color/color_f9f9f9"/>
   <android.support.v7.widget.RecyclerView
       android:id="@+id/all_function_rv"
       android:layout_marginTop="@dimen/dp_14"
       android:layout_marginBottom="@dimen/dp_14"
       android:layout_marginStart="@dimen/dp_19"
       android:layout_marginEnd="@dimen/dp_19"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:overScrollMode="never"/>
   </LinearLayout>
   </android.support.v4.widget.NestedScrollView>

</LinearLayout>