<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_142"
    android:background="@color/primary_color">
    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49">
        <TextView
            android:id="@+id/order_cure_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_19"
            android:textSize="@dimen/sp_14"
            android:textColor="#333333"
            android:maxWidth="@dimen/dp_80"
            android:lines="1"
            android:ellipsize="end"
            android:layout_centerVertical="true"
            android:text="执笔一幅情画"/>

        <TextView
            android:id="@+id/add_order_cure_tv"
            android:layout_width="@dimen/dp_86"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_19"
            android:textSize="@dimen/sp_14"
            android:textColor="#3F98F7"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="填写申请"
            android:visibility="visible"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/order_overdue_tv"
            android:layout_width="wrap_content"
            android:background="@drawable/order_cure_outtime_bg"
            android:layout_height="@dimen/dp_26"
            android:layout_marginRight="@dimen/dp_19"
            android:textSize="@dimen/dp_12"
            android:paddingLeft="@dimen/dp_17"
            android:paddingRight="@dimen/dp_17"
            android:drawablePadding="@dimen/dp_6"
            android:textColor="#666666"
            android:drawableLeft="@mipmap/out_date_img"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="已过期"/>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_f9f9f9" />
    </RelativeLayout>

    <TextView
        android:id="@+id/cure_department_label"
        android:layout_below="@+id/head_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_19"
        android:textColor="#BBBBBB"
        android:textSize="@dimen/sp_14"
        android:text="入院科室："/>
    <TextView
        android:id="@+id/cure_department_tv"
        android:layout_below="@+id/head_layout"
        android:layout_toRightOf="@+id/cure_department_label"
        android:layout_marginTop="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        android:maxWidth="@dimen/dp_150"
        android:lines="1"
        android:ellipsize="end"
        android:text="呼吸内科医疗单元sadasdasdasd"/>
    <TextView
        android:id="@+id/cure_doctor_label"
        android:layout_below="@+id/cure_department_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_19"
        android:textColor="#BBBBBB"
        android:textSize="@dimen/sp_14"
        android:text="开证医生："/>
    <TextView
        android:id="@+id/cure_doctor_tv"
        android:layout_below="@+id/cure_department_tv"
        android:layout_toRightOf="@+id/cure_doctor_label"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginStart="@dimen/dp_19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:textSize="@dimen/sp_14"
        android:maxWidth="@dimen/dp_80"
        android:lines="1"
        android:ellipsize="end"
        android:text="范红ddddddddddddd"/>
    <TextView
        android:id="@+id/cure_time_tv"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cure_department_tv"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#BBBBBB"
        android:textSize="@dimen/sp_14"
        android:text="2018-09-15 14:23:31"/>
    <View
        android:layout_above="@+id/bottom_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@mipmap/colorful_line" />
    <View
        android:id="@+id/bottom_line"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f9f9f9" />
</RelativeLayout>