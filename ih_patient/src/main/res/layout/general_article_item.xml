<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginStart="@dimen/dp_9"
        android:layout_marginRight="@dimen/dp_9"
        android:background="@color/article_space_bg_color"/>
    <ImageView
        android:id="@+id/article_icon_img"
        android:layout_width="@dimen/dp_86"
        android:layout_height="@dimen/dp_58"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginStart="@dimen/dp_9"
        android:layout_marginBottom="@dimen/dp_14"
        android:src="@drawable/pic_1"
        />

    <com.keydom.ih_common.widget.autowrap.AutoWrapTabView
        android:id="@+id/article_label_v"
        android:layout_toRightOf="@+id/article_icon_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        app:vertical_dash="3dp"
        app:horizontal_dash="3dp"
        android:layout_marginStart="@dimen/dp_11"
        android:text="呼吸道科"
        android:textSize="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:paddingTop="@dimen/dp_2"
        android:paddingBottom="@dimen/dp_2"/>
    <TextView
        android:id="@+id/article_title_tv"
        android:layout_toRightOf="@+id/article_icon_img"
        android:layout_below="@+id/article_label_v"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_4"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/fontColorNavigate"
        android:text="慢性病管理中心开展健康大讲堂"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/article_readernum_tv"
        android:layout_toRightOf="@+id/article_icon_img"
        android:layout_marginStart="@dimen/dp_11"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/article_title_tv"
        android:textSize="@dimen/font_size_auxiliary"
        android:textColor="@color/tab_nol_color"
        android:text="阅读人数： 99788  2018.11.13"/>
</RelativeLayout>