<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/function_icon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_12"
    android:layout_centerHorizontal="true"
    android:src="@mipmap/mine_location_yellow"/>
    <RelativeLayout
        android:layout_below="@+id/function_icon"
        android:layout_marginTop="@dimen/dp_12"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/funciton_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址管理"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/dp_12"/>
        <View
            android:id="@+id/item_redpoint_view"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_7"
            android:visibility="gone"
            android:layout_alignRight="@id/funciton_name"
            android:background="@drawable/red_point_view_bg"/>
    </RelativeLayout>
</merge>