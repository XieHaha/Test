<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_title_bar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/choose_patient_tab"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        app:tabTextAppearance="@style/TabLayoutTextStyle"
        app:tabSelectedTextColor="@color/other_login_color"
        app:tabTextColor="@color/tab_nol_color"
        app:tabIndicatorColor="@color/other_login_color"
        app:tabIndicatorHeight="@dimen/dp_2"
        app:tabBackground="@drawable/item_bg_bottom_divider"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabMaxWidth="0dp"
        android:background="#ffffff"
        android:layout_height="@dimen/dp_50"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/choose_patient_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>