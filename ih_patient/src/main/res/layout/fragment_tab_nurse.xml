                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.stx.xhb.xbanner.XBanner
                    android:id="@+id/nurse_banner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_235"
                    app:pointsPosition="RIGHT" />
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_235"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@mipmap/physical_exa_detail_head_icon"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_18"
                    android:paddingTop="@dimen/dp_18"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/title_left_icon"
                        android:layout_width="@dimen/dp_2"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_19"

                        android:src="@mipmap/title_left_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:layout_toRightOf="@+id/title_left_icon"
                        android:text="待处理服务"
                        android:textSize="@dimen/font_size_primary"
                        android:textColor="@color/fontColorPrimary"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingBottom="@dimen/dp_28"
                    android:orientation="horizontal">
                    <com.keydom.ih_common.view.CountItemView
                        android:id="@+id/await_pay_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        mitem:itemName="待支付">
                    </com.keydom.ih_common.view.CountItemView>

                    <com.keydom.ih_common.view.CountItemView
                        android:id="@+id/await_diagnose_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        mitem:itemName="待服务">
                    </com.keydom.ih_common.view.CountItemView>

                    <com.keydom.ih_common.view.CountItemView
                        android:id="@+id/diagnose_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        mitem:itemName="服务中">
                    </com.keydom.ih_common.view.CountItemView>

                    <com.keydom.ih_common.view.CountItemView
                        android:id="@+id/finished_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        mitem:itemName="已完成">
                    </com.keydom.ih_common.view.CountItemView>

                    <com.keydom.ih_common.view.CountItemView
                        android:id="@+id/await_evaluation_cv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        mitem:itemName="待评价">
                    </com.keydom.ih_common.view.CountItemView>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_10"
                    android:background="#F9F9F9"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/dp_18"
                    android:paddingTop="@dimen/dp_18"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/dp_2"
                        android:layout_height="@dimen/dp_18"
                        android:layout_marginLeft="@dimen/dp_19"
                        android:src="@mipmap/title_left_icon"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_6"
                        android:text="服务类别"
                        android:textSize="@dimen/font_size_primary"
                        android:textColor="@color/fontColorPrimary"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_24"
                    android:layout_marginBottom="@dimen/dp_28"
