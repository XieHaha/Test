<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_310"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner15_ffffff_bg"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_13"
            android:src="@mipmap/health_dialog_bg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/txt_health_manager_open_success"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_42"
            android:layout_marginBottom="@dimen/dp_57"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/dialog_health_home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:text="@string/txt_back_home"
                android:textColor="@color/tab_nol_color"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/dialog_health_manager_tv"
                android:layout_width="@dimen/dp_160"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_26"
                android:background="@drawable/btn_health_manager_bg"
                android:gravity="center"
                android:text="@string/txt_health_manager"
                android:textColor="@color/color_846336"
                android:textSize="@dimen/sp_14"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>