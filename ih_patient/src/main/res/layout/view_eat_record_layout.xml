<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/icon_breakfast" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:text="@string/txt_breakfast"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/txt_breakfast_hint"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/view_eat_record_add_breakfast_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_lifestyle_add"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/txt_add_record"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/eat_record_breakfast_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_70"
        android:layout_marginEnd="@dimen/dp_31"
        android:background="@color/color_f9f9f9"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/eat_record_breakfast_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <TextView
            android:id="@+id/eat_record_breakfast_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@mipmap/icon_lifestyle_add"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/txt_add_record"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_10">

        <ImageView
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:src="@mipmap/icon_lunch" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:text="@string/txt_lunch"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_weight="1"
            android:text="@string/txt_lunch_hint"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:id="@+id/view_eat_record_add_lunch_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_lifestyle_add"
            android:drawablePadding="@dimen/dp_11"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="@string/txt_add_record"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/eat_record_lunch_root_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_70"
        android:layout_marginEnd="@dimen/dp_31"
        android:background="@color/color_f9f9f9"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/eat_record_lunch_item_layout"
