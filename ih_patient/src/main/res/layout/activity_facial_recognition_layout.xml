<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">

    <include layout="@layout/common_title_bar" />

    <TextView
        android:id="@+id/facial_recognition_top_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:text="通过脸部安全识别"
        android:textColor="#333333"
        android:textSize="@dimen/dp_23" />
    <ImageView
        android:id="@+id/facial_recognition_bg_img"
        android:layout_below="@+id/facial_recognition_top_label"
        android:layout_width="@dimen/dp_274"
        android:layout_height="@dimen/dp_295"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_4"
        android:src="@mipmap/facial_recognition_bg" />

    <TextView
        android:id="@+id/facial_recognition_buttom_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请将正脸对准框内，保持光线充足"
        android:textColor="#666666"
        android:textSize="@dimen/dp_15"
        android:layout_below="@+id/facial_recognition_bg_img"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/start_facial_recognition_tv"
        android:layout_below="@+id/facial_recognition_buttom_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_45"
        android:background="@mipmap/fill_personal_bt_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始识别"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:textSize="@dimen/dp_17" />
</RelativeLayout>