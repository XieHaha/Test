<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160"
        android:layout_marginLeft="@dimen/dp_34"
        android:layout_marginRight="@dimen/dp_34"
        android:src="@mipmap/create_card_manage"/>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/primary_bg_color"/>
    <TextView
        android:id="@+id/send_id_card_tv"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61"
        android:layout_marginLeft="@dimen/dp_19"
        android:layout_marginRight="@dimen/dp_19"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/dp_17"
        android:gravity="center"
        android:textColor="@color/primary_color"
        android:text="@string/creat_or_bind_card_func_send_id_card"
        android:background="@mipmap/fill_personal_bt_bg"
        />

    <TextView
        android:id="@+id/send_other_certificates_tv"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_61"
        android:layout_marginLeft="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_18"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/dp_17"
        android:gravity="center"
        android:textColor="@color/title_bar_text_color"
        android:text="@string/creat_or_bind_card_func_send_other_certificates"
        android:background="@mipmap/complete_register_bt_bg"
        />
</LinearLayout>