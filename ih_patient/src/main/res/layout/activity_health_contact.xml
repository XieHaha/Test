<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f1f1f1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_34"
        android:paddingEnd="@dimen/dp_27">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_archives_job"
            android:drawablePadding="@dimen/dp_18"
            android:gravity="center"
            android:text="@string/txt_relationship"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/health_contact_relationship_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_27"
            android:drawableEnd="@mipmap/arrow_bottom"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center"
            android:hint="@string/txt_select"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/edit_hint_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f9f9f9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_34"
            android:drawableStart="@mipmap/icon_archives_name"
            android:drawablePadding="@dimen/dp_18"
            android:text="@string/txt_name"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/sp_14" />

        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/health_contact_name_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_27"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="@string/txt_other_name_hint"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/edit_hint_color"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f9f9f9" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_34"
            android:drawableStart="@mipmap/icon_archives_phone"
            android:drawablePadding="@dimen/dp_18"
            android:text="@string/txt_phone"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/sp_14" />

        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/health_contact_phone_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_27"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="@string/txt_other_phone_hint"
            android:inputType="phone"
            android:maxLength="11"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/edit_hint_color"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f9f9f9" />
</LinearLayout>