<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_title_bar"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/primary_bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:drawableLeft="@mipmap/point_icon_1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary"
            android:text="头像"/>
        <com.keydom.ih_common.view.CircleImageView
            android:id="@+id/user_head_img"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_29"
            android:layout_width="@dimen/dp_38"
            android:layout_height="@dimen/dp_38"
            android:src="@mipmap/mine_user_head"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:drawableLeft="@mipmap/point_icon_2"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary"
            android:text="姓名"/>
        <TextView
            android:id="@+id/user_name_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="请输入姓名"
            android:lines="1"
            android:ellipsize="end"
            android:maxWidth="@dimen/dp_150"
            android:maxLength="20"
            android:textColor="@color/tab_nol_color"
            android:paddingRight="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_13"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:drawableLeft="@mipmap/point_icon_3"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary"
            android:text="性别"/>
        <TextView
            android:id="@+id/user_sex_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="请选择性别"
            android:textColor="@color/tab_nol_color"
            android:paddingRight="@dimen/dp_30"
            android:textSize="@dimen/dp_15"/>
</RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/primary_bg_color"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:drawableLeft="@mipmap/point_icon_4"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary"
            android:text="实名认证"/>
        <TextView
            android:id="@+id/user_real_name_status_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="未实名认证"
            android:textColor="@color/tab_nol_color"
            android:paddingRight="@dimen/dp_23"
            android:drawablePadding="@dimen/dp_13"
            android:textSize="@dimen/dp_15"
            android:drawableRight="@mipmap/exa_report_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:drawableLeft="@mipmap/point_icon_5"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary"
            android:text="地区"/>
        <TextView
            android:id="@+id/user_region_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="请选择地区"
            android:maxWidth="@dimen/dp_250"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/tab_nol_color"
            android:paddingRight="@dimen/dp_30"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:drawableLeft="@mipmap/point_icon_6"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary"
            android:text="电话号码"/>
        <TextView
            android:id="@+id/user_phone_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="点击认证电话号码"
            android:textColor="@color/tab_nol_color"
            android:paddingRight="@dimen/dp_23"
            android:drawablePadding="@dimen/dp_13"
            android:textSize="@dimen/dp_15"
            android:drawableRight="@mipmap/exa_report_right"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:drawableLeft="@mipmap/point_icon_7"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary"
            android:text="国籍"/>
        <TextView
            android:id="@+id/user_country_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="请选择国籍"
            android:textColor="@color/tab_nol_color"
            android:paddingRight="@dimen/dp_30"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:drawableLeft="@mipmap/point_icon_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary"
            android:text="民族"/>
        <TextView
            android:id="@+id/user_nation_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="请选择民族"
            android:textColor="@color/tab_nol_color"
            android:paddingRight="@dimen/dp_30"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">
        <TextView
            android:drawableLeft="@mipmap/point_icon_8"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:drawablePadding="@dimen/dp_18"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary"
            android:text="证件图片"/>
        <TextView
            android:id="@+id/user_id_card_pic_tv"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="点击上传证件图片"
            android:textColor="@color/tab_nol_color"
            android:paddingRight="@dimen/dp_23"
            android:drawablePadding="@dimen/dp_13"
            android:textSize="@dimen/dp_15"
            android:drawableRight="@mipmap/exa_report_right"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/primary_bg_color"/>
</LinearLayout>