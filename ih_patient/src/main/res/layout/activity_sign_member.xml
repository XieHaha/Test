<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/primary_bg_color" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">

        <TextView
            android:id="@+id/name_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/point_icon_2"
            android:drawablePadding="@dimen/dp_18"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:text="姓名             "
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary" />

        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/id_card_name_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_toRightOf="@+id/name_label"
            android:background="@null"
            android:drawablePadding="@dimen/dp_13"
            android:gravity="center_vertical"
            android:hint="请输入姓名"
            android:maxLength="20"
            android:paddingRight="@dimen/dp_30"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_56">

        <TextView
            android:id="@+id/num_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/point_icon_2"
            android:drawablePadding="@dimen/dp_18"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_30"
            android:text="身份证号码"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/font_size_primary" />

        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/id_card_num_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_toRightOf="@+id/num_label"
            android:background="@null"
            android:drawablePadding="@dimen/dp_13"
            android:gravity="center_vertical"
            android:hint="请输入身份证号码"
            android:maxLength="20"
            android:paddingRight="@dimen/dp_30"
            android:textColor="@color/primary_font_color"
            android:textSize="@dimen/dp_15" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/index_top_text"
        android:gravity="center"
        android:text="12个月VIP  20000元  享受12个月绿色通道就医服务"
        android:textColor="@color/white" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_38"
        android:background="#F2F2F2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:text="选择支付方式"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary" />

        <TextView
            android:id="@+id/order_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_21"
            android:textColor="#3F98F7"
            android:textSize="@dimen/font_size_primary" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sign_member_ali_pay_root_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_63">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:src="@mipmap/ali_pay_icon" />

        <TextView
            android:id="@+id/ali_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_105"
            android:text="支付宝支付"
            android:textColor="#7FBDFF"
            android:textSize="@dimen/font_size_primary" />

        <ImageView
            android:id="@+id/ali_pay_selected_img"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_45"
            android:src="@mipmap/pay_selected_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_92"
            android:layout_marginRight="@dimen/dp_25"
            android:background="#EEEEEE" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sign_member_wechat_pay_root_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_63">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_19"
            android:src="@mipmap/wechat_pay_icon" />

        <TextView
            android:id="@+id/wechat_pay_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_105"
            android:text="微信支付"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary" />

        <ImageView
            android:id="@+id/wechat_pay_selected_img"
            android:layout_width="@dimen/dp_27"
            android:layout_height="@dimen/dp_27"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_45"
            android:src="@mipmap/pay_unselected_icon" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_92"
            android:layout_marginRight="@dimen/dp_25"
            android:background="#EEEEEE" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="@dimen/dp_65">

        <CheckBox
            android:id="@+id/pay_agreement_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:button="@drawable/pay_checkbox_selector"
            android:layout_marginLeft="@dimen/dp_50"/>

        <TextView
            android:id="@+id/pay_agreement_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_2"
            android:layout_toRightOf="@+id/pay_agreement_cb"
            android:text="我已阅读并同意《网络诊间服务条款》"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary" />
    </RelativeLayout>

    <TextView
        android:id="@+id/pay_commit_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_52"
        android:layout_marginBottom="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_marginRight="@dimen/dp_21"
        android:background="@mipmap/pay_commit_bg"
        android:gravity="center"
        android:text="去付款"
        android:textColor="@color/primary_color"
        android:textSize="@dimen/dp_17" />
</LinearLayout>