<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/vip_title_bar" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@mipmap/vip_sign_top_star_bg" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:background="@color/white"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/fragment_vip_member_detail_charge_record_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/vip_balance_icon" />


                    <TextView
                        android:id="@+id/sign_member_price_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:ellipsize="end"
                        android:textColor="@color/vip_detail_balance_number_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_vip_member_detail_charge_ll"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/vip_desc_icon" />


                    <TextView
                        android:id="@+id/sign_member_desc_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="13dp"
                        android:ellipsize="end"
                        android:textColor="@color/vip_detail_balance_number_text"
                        android:textSize="12sp" />
                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_38"
                android:background="#F2F2F2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="个人信息"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/order_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_21"
                    android:textColor="#3F98F7"
                    android:textSize="@dimen/font_size_primary" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <TextView
                    android:id="@+id/name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/point_icon_2"
                    android:drawablePadding="@dimen/dp_18"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_30"
                    android:text="姓名             "
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.InterceptorEditText
                    android:id="@+id/sign_member_name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_toRightOf="@+id/name_label"
                    android:background="@null"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:hint="请输入姓名"
                    android:maxLength="20"
                    android:paddingRight="@dimen/dp_30"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/dp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <TextView
                    android:id="@+id/num_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:drawableLeft="@mipmap/point_icon_2"
                    android:drawablePadding="@dimen/dp_18"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/dp_30"
                    android:text="身份证号码"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <com.keydom.ih_common.view.InterceptorEditText
                    android:id="@+id/sign_member_id_num_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/dp_26"
                    android:layout_toRightOf="@+id/num_label"
                    android:background="@null"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:hint="请输入身份证号码"
                    android:maxLength="20"
                    android:paddingRight="@dimen/dp_30"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/dp_15" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65">

                <CheckBox
                    android:id="@+id/sign_member_agreement_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:button="@drawable/pay_checkbox_selector"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/sign_member_agreement_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:layout_toRightOf="@+id/sign_member_agreement_cb"
                    android:text="我已阅读并同意《会员服务协议》"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_primary" />
            </RelativeLayout>

            <TextView
                android:id="@+id/pay_commit_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_marginLeft="@dimen/dp_21"
                android:layout_marginRight="@dimen/dp_21"
                android:layout_marginBottom="@dimen/dp_50"
                android:background="@mipmap/pay_commit_bg"
                android:gravity="center"
                android:text="去付款"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dp_17" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>