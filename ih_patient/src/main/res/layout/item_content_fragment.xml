<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="1、就就感冒灵"
        android:textColor="#333333"
        android:textSize="14dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_spec"
            android:layout_width="@dimen/dp_96"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:text="0.65g*24粒/盒"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_toRightOf="@+id/tv_spec"
            android:text="1.00盒"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="@dimen/dp_66"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="12元"
            android:textColor="#FF3939"
            android:textSize="@dimen/sp_14"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_yong"
            android:layout_width="@dimen/dp_96"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_21"
            android:text="用法：2.6g/次"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_kou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_27"
            android:layout_toRightOf="@+id/tv_yong"
            android:text="口服少时诵诗书"
            android:maxEms="4"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/tab_nol_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv_frequency"
            android:layout_width="@dimen/dp_66"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:text="每日2次"
            android:textColor="#FF3939"
            android:textSize="@dimen/sp_14"

            />

    </RelativeLayout>

</LinearLayout>