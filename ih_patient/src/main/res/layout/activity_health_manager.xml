<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_dp"
        android:background="@color/other_login_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_16"
            android:paddingEnd="@dimen/dp_16"
            android:src="@drawable/select_left_arrow" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/child_health_title_color"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/layout"
        android:background="@color/bg_lines" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/other_login_color"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_18"
                    android:text="@string/txt_my_health_management"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/sp_18"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_record_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_11"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/sp_12"
                    tools:text="已记录病况200天" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_75"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:background="@drawable/corner5_bg_ffffff"
                    android:paddingStart="@dimen/dp_20"
                    android:paddingTop="@dimen/dp_15"
                    android:paddingEnd="0dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        tools:text="姓名" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_marginTop="@dimen/dp_14"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/edit_text_color"
                            android:textSize="@dimen/sp_12"
                            tools:text="女" />

                        <TextView
                            android:id="@+id/tv_age"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/edit_text_color"
                            android:textSize="@dimen/sp_12"
                            tools:text="15岁" />

                        <TextView
                            android:id="@+id/tv_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_10"
                            android:textColor="@color/edit_text_color"
                            android:textSize="@dimen/sp_12"
                            tools:text="18999999999" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_231"
                android:background="@drawable/medical_mail_bg"
                android:paddingStart="@dimen/dp_10"
                android:paddingTop="@dimen/dp_10"
                android:paddingEnd="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_29">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner5_bg_ffffff"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/dp_17"
                    android:paddingEnd="@dimen/dp_17">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/dp_20">

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/icon_recv_city"
                                android:drawablePadding="@dimen/dp_7"
                                android:gravity="bottom"
                                android:text="@string/txt_blood_oxygen"
                                android:textColor="@color/edit_hint_color"
                                android:textSize="@dimen/sp_14" />

                            <TextView
                                android:id="@+id/tv_blood_oxygen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text"
                                android:layout_marginStart="@dimen/dp_30"
                                android:layout_marginTop="@dimen/dp_16"
                                android:textColor="@color/primary_font_color"
                                android:textSize="@dimen/sp_21"
                                android:textStyle="bold"
                                tools:text="90%" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/dp_20">

                            <TextView
                                android:id="@+id/text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/icon_recv_city"
                                android:drawablePadding="@dimen/dp_7"
                                android:gravity="bottom"
                                android:text="@string/txt_blood_glucose"
                                android:textColor="@color/edit_hint_color"
                                android:textSize="@dimen/sp_14" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text1"
                                android:layout_marginStart="@dimen/dp_30"
                                android:layout_marginTop="@dimen/dp_16">

                                <TextView
                                    android:id="@+id/tv_blood_glucose"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/primary_font_color"
                                    android:textSize="@dimen/sp_21"
                                    android:textStyle="bold"
                                    tools:text="65" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="mmol/L"
                                    android:textColor="@color/primary_font_color"
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/dp_20">

                            <TextView
                                android:id="@+id/text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/icon_recv_city"
                                android:drawablePadding="@dimen/dp_7"
                                android:gravity="bottom"
                                android:text="@string/txt_blood_pressure"
                                android:textColor="@color/edit_hint_color"
                                android:textSize="@dimen/sp_14" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text2"
                                android:layout_marginStart="@dimen/dp_30"
                                android:layout_marginTop="@dimen/dp_16">

                                <TextView
                                    android:id="@+id/tv_blood_pressure"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/primary_font_color"
                                    android:textSize="@dimen/sp_21"
                                    android:textStyle="bold"
                                    tools:text="120/80" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="mmhg"
                                    android:textColor="@color/primary_font_color"
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="@dimen/dp_20">

                            <TextView
                                android:id="@+id/text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:drawableStart="@mipmap/icon_recv_city"
                                android:drawablePadding="@dimen/dp_7"
                                android:gravity="bottom"
                                android:text="@string/txt_heart_rate"
                                android:textColor="@color/edit_hint_color"
                                android:textSize="@dimen/sp_14" />


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/text3"
                                android:layout_marginStart="@dimen/dp_30"
                                android:layout_marginTop="@dimen/dp_16">

                                <TextView
                                    android:id="@+id/tv_heart_rate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/primary_font_color"
                                    android:textSize="@dimen/sp_21"
                                    android:textStyle="bold"
                                    tools:text="90" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="次/分"
                                    android:textColor="@color/primary_font_color"
                                    android:textSize="@dimen/sp_14"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_3"
                android:text="@string/txt_my_health_manager"
                android:textColor="@color/edit_hint_color"
                android:textSize="@dimen/sp_14" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100">

                <ImageView
                    android:id="@+id/iv_manager_header"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_25"
                    android:src="@drawable/bg_default_photo_round" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_toEndOf="@id/iv_manager_header">

                    <TextView
                        android:id="@+id/tv_manager_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        tools:text="管理师" />

                    <TextView
                        android:id="@+id/tv_manager_hospital"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_manager_name"
                        android:layout_marginTop="@dimen/dp_15"
                        android:textColor="@color/edit_hint_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="医院" />

                    <TextView
                        android:id="@+id/tv_manager_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_manager_name"
                        android:layout_marginStart="@dimen/dp_10"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_toEndOf="@id/tv_manager_hospital"
                        android:textColor="@color/edit_hint_color"
                        android:textSize="@dimen/sp_12"
                        tools:text="主任" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_alignParentBottom="true"
                    android:background="@color/line_color" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_19"
                android:layout_marginTop="@dimen/dp_26"
                android:text="@string/txt_abnormal_sign_data"
                android:textColor="@color/edit_hint_color"
                android:textSize="@dimen/sp_14" />

            <LinearLayout
                android:id="@+id/layout_abnormal_sign_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginBottom="@dimen/dp_20"
                android:orientation="vertical" />

        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/iv_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:src="@mipmap/icon_online_consultation" />

</RelativeLayout>