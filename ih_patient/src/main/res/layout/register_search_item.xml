<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_80">
    <com.keydom.ih_common.view.CircleImageView
        android:id="@+id/item_head_img"
        android:layout_width="@dimen/dp_58"
        android:layout_height="@dimen/dp_58"
        android:layout_centerVertical="true"
        android:src="@mipmap/test_doctor_head_icon"
        android:layout_marginLeft="@dimen/dp_19"/>
    <TextView
        android:id="@+id/item_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_head_img"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="杨沛"
        android:textColor="@color/primary_font_color"
        android:textSize="@dimen/font_size_primary"/>
    <TextView
        android:id="@+id/item_dsc_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_name_tv"
        android:layout_toRightOf="@+id/item_head_img"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_20"
        android:lines="1"
        android:ellipsize="end"
        android:text="描述:这里可以是关于医生的描述，比如擅长领域或者是典型临床经验等，也可以是对科室的描述"
        android:textColor="#BBBBBB"
        android:textSize="@dimen/dp_12"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE"/>
</RelativeLayout>