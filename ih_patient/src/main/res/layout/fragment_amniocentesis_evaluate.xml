<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@color/register_success_color"
            android:gravity="center"
            android:text="@string/txt_amniocentesis_reserve_evaluate"
            android:textColor="@color/primary_color"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold" />


        <com.keydom.ih_common.view.JustifiedTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginEnd="@dimen/dp_27"
            android:lineSpacingMultiplier="1.2"
            android:text="@string/txt_amniocentesis_reserve_evaluate_description"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_27"
            android:layout_marginTop="@dimen/dp_30"
            android:text="@string/txt_pregnancy_fetus"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <LinearLayout
