<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f9f9f9" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56"
                android:orientation="horizontal"
                android:paddingLeft="34.5dp"
                android:paddingRight="34.5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="预约事项"
                    android:textColor="@color/vip_pregnancy_week_text"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.4"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/pregnancy_detail_order_diagnose_root_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/pregnancy_detail_order_diagnose_iv"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/pay_selector" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="产科门诊"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/pregnancy_detail_order_check_root_ll"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/pregnancy_detail_order_check_iv"
                            android:layout_width="21dp"
                            android:layout_height="21dp"
                            android:layout_marginEnd="5dp"
                            android:src="@drawable/pay_selector" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:text="检验检查"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


            <RelativeLayout
                android:id="@+id/pregnancy_check_projects_root_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34.5dp"
                    android:layout_marginTop="23.5dp"
                    android:text="预约项目"
                    android:textColor="@color/vip_pregnancy_week_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pregnancy_check_projects_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_13"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:maxWidth="200dp"
                    android:maxLines="1"
                    android:paddingRight="@dimen/dp_23"
                    android:text="请选择检验检查项目"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pregnancy_order_date_root_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_56">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="34.5dp"
                    android:layout_marginTop="23.5dp"
                    android:text="预约时间"
                    android:textColor="@color/vip_pregnancy_week_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/pregnancy_order_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:drawableRight="@mipmap/exa_report_right"
                    android:drawablePadding="@dimen/dp_13"
                    android:gravity="center_vertical"
                    android:paddingRight="@dimen/dp_23"
                    android:text="请选择时间"
                    android:textColor="@color/tab_nol_color"
                    android:textSize="14sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="34.5dp"
                android:layout_marginTop="23.5dp"
                android:text="预约时段"
                android:textColor="@color/vip_pregnancy_week_text"
                android:textSize="14sp" />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/pregnancy_detail_time_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="@color/color_f9f9f9" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="35dp"
                android:text="为了节约您的就诊时间，您可以按医生约定的产检日期，提前1~2天进行检验检查预约与执行，以便携带检验检查报告就诊"
                android:textColor="@color/vip_pregnancy_week_text"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/pregnancy_detail_order_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_52"
                android:layout_marginStart="@dimen/dp_21"
                android:layout_marginTop="36dp"
                android:layout_marginEnd="@dimen/dp_21"
                android:layout_marginBottom="29dp"
                android:background="@mipmap/pay_commit_bg"
                android:gravity="center"
                android:text="预约"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/dp_17" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>

