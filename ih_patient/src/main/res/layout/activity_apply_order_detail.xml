<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F9F9"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_left_right_dp">

    <include layout="@layout/common_title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolBar"
        android:layout_marginTop="@dimen/padding_left_right_dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@drawable/shadow_apply_order_detail"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_20"
            android:paddingTop="@dimen/dp_30"
            android:paddingRight="@dimen/dp_20">

            <TextView
                android:id="@+id/hospital_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="成都市第一人民医院互联网医院"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/table_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:gravity="center_horizontal"
                android:text="检查申请单"
                android:textColor="#3F98F7"
                android:textSize="@dimen/font_size_fuc" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_4">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="卫斯理"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_horizontal"
                        android:text="姓名"
                        android:textColor="#BBBBBB"
                        android:textSize="@dimen/font_size_primary" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_4">

                    <TextView
                        android:id="@+id/user_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="男"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_horizontal"
                        android:text="性别"
                        android:textColor="#BBBBBB"
                        android:textSize="@dimen/font_size_primary" />
                </LinearLayout>

                <View
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/dp_4"
                    android:paddingBottom="@dimen/dp_4">

                    <TextView
                        android:id="@+id/user_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="24"
                        android:textColor="@color/primary_font_color"
                        android:textSize="@dimen/font_size_primary" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:gravity="center_horizontal"
                        android:text="年龄"
                        android:textColor="#BBBBBB"
                        android:textSize="@dimen/font_size_primary" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_19"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_4"
                android:paddingTop="@dimen/dp_18"
                android:paddingRight="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_9">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="门诊号："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/diagnose_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="20180915003"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_4"
                android:paddingTop="@dimen/dp_9"
                android:paddingRight="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_18">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="科室："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/dept_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="呼吸内科"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_4"
                android:paddingTop="@dimen/dp_9"
                android:paddingRight="@dimen/dp_4"
                android:paddingBottom="@dimen/dp_9">

                <TextView
                    android:id="@+id/sample_type_tip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="标本类型："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/sample_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="静脉血"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/diagnose_res_tip_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:drawableLeft="@mipmap/point_icon_6"
                    android:drawablePadding="@dimen/dp_9"
                    android:paddingLeft="@dimen/dp_8"
                    android:text="临床诊断："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/diagnose_res_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/diagnose_res_tip_tv"
                    android:layout_marginTop="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_35"
                    android:text="急性上呼吸道感染"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/disease_dec_tip_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/diagnose_res_tv"
                    android:layout_marginTop="@dimen/dp_12"
                    android:drawableLeft="@mipmap/point_icon_4"
                    android:drawablePadding="@dimen/dp_9"
                    android:paddingLeft="@dimen/dp_8"
                    android:text="病情描述："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/disease_dec_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/disease_dec_tip_tv"
                    android:layout_marginTop="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_35"
                    android:text="急性上呼吸道感染"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/check_item_tip_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/disease_dec_tv"
                    android:layout_marginTop="@dimen/dp_12"
                    android:drawableLeft="@mipmap/point_icon_3"
                    android:drawablePadding="@dimen/dp_9"
                    android:paddingLeft="@dimen/dp_8"
                    android:text="检查项目："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_auxiliary" />


                <android.support.v7.widget.RecyclerView
                    android:id="@+id/check_item_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/check_item_tip_tv"
                    android:layout_marginTop="@dimen/dp_20"
                    android:paddingLeft="@dimen/dp_35"
                    android:paddingRight="@dimen/dp_35">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:id="@+id/check_item_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/check_item_rv"
                    android:layout_marginTop="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_35"
                    android:text="心脏    心脏    心脏"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />


                <TextView
                    android:id="@+id/doctor_instruction_tip_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/check_item_tv"
                    android:layout_marginTop="@dimen/dp_12"
                    android:drawableLeft="@mipmap/point_icon_4"
                    android:drawablePadding="@dimen/dp_9"
                    android:paddingLeft="@dimen/dp_8"
                    android:text="医生嘱托："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_auxiliary" />

                <TextView
                    android:id="@+id/doctor_instruction_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/doctor_instruction_tip_tv"
                    android:layout_marginTop="@dimen/dp_12"
                    android:paddingLeft="@dimen/dp_35"
                    android:text="本次心脏检查三次、肾脏两次"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_auxiliary" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:layout_below="@id/doctor_instruction_tv"
                    android:layout_marginLeft="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginRight="@dimen/dp_20"
                    android:background="@color/line_color" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dp_35"
                android:paddingTop="@dimen/dp_10"
                android:paddingRight="@dimen/dp_20"
                android:paddingBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/check_item_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="总共三项"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/total_fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="总金额：¥120"
                    android:textColor="#FF3939"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_24"
                android:paddingBottom="@dimen/dp_26">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="申请医生："
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/apply_doctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="唐林"
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="申请时间："
                    android:textColor="#BBBBBB"
                    android:textSize="@dimen/font_size_primary" />


                <TextView
                    android:id="@+id/apply_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="2018.10.16 "
                    android:textColor="@color/primary_font_color"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


    <ImageButton
        android:id="@+id/edit_order_ib"
        style="@null"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_40"
        android:visibility="gone"/>
</RelativeLayout>
