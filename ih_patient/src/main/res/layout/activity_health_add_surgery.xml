<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f1f1f1" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_34"
            android:drawableStart="@mipmap/icon_in_hospital"
            android:drawablePadding="@dimen/dp_18"
            android:text="@string/txt_surgery_name"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/sp_14" />

        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/add_surgery_name_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_27"
            android:background="@null"
            android:gravity="center_vertical|end"
            android:hint="@string/txt_surgery_name_hint"
            android:singleLine="true"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/edit_hint_color"
            android:textSize="@dimen/sp_14" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f9f9f9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_34"
        android:paddingEnd="@dimen/dp_27">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_leave_time"
            android:drawablePadding="@dimen/dp_18"
            android:gravity="center"
            android:text="@string/txt_surgery_date"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/add_surgery_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_27"
            android:drawableEnd="@mipmap/arrow_bottom"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center|end"
            android:hint="@string/txt_surgery_date_hint"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/edit_hint_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f9f9f9" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_62"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/dp_34"
        android:paddingEnd="@dimen/dp_27">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_recv_city"
            android:drawablePadding="@dimen/dp_18"
            android:gravity="center"
            android:text="@string/txt_surgery_status"
            android:textColor="@color/edit_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/add_surgery_status_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_27"
            android:drawableEnd="@mipmap/arrow_bottom"
            android:drawablePadding="@dimen/dp_15"
            android:gravity="center|end"
            android:hint="@string/txt_surgery_status_hint"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/edit_hint_color"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_f9f9f9" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_15"
        android:background="@color/color_f7f7f7" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_184"
        android:layout_marginTop="@dimen/dp_24">

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_20"
            android:text="@string/txt_notice_description"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <com.keydom.ih_common.view.InterceptorEditText
            android:id="@+id/add_surgery_notice_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/text"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@drawable/anamnesis_edit_bg"
            android:gravity="top"
            android:hint="@string/txt_edit_content_hint"
            android:maxLength="500"
            android:paddingStart="@dimen/dp_15"
            android:paddingTop="@dimen/dp_15"
            android:paddingEnd="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_30"
            android:singleLine="false"
            android:textColor="@color/color_333333"
            android:textColorHint="@color/edit_hint_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="0/500"
            android:textColor="@color/edit_hint_color"
            android:textSize="@dimen/sp_12"
            android:visibility="gone" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:src="@drawable/im_voice_toggle_selector"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>