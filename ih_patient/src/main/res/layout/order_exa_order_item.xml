<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/exa_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_21"
        android:layout_marginStart="@dimen/dp_31"
        android:textSize="@dimen/sp_14"
        android:textColor="#3F98F7"
        android:text="CT项目"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/exa_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginStart="@dimen/dp_19"
            android:textSize="@dimen/font_size_primary"
            android:textColor="@color/fontColorDirection"
            android:lineSpacingExtra="@dimen/dp_8"
            android:gravity="right"
            android:text="@string/order_exa_label"/>
        <TextView
            android:id="@+id/exa_detail_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/font_size_primary"
            android:layout_marginStart="@dimen/dp_24"
            android:lineSpacingExtra="@dimen/dp_8"
            android:textColor="#666666"
            android:text="@string/order_exa_example"/></LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@mipmap/colorful_line" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f9f9f9" />


</LinearLayout>