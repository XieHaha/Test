<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_bg"
    >

    <com.keydom.ih_common.view.CircleImageView
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_18"
        android:id="@+id/iv_photo"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:scaleType="fitXY"
        android:src="@mipmap/mine_user_head"/>
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_photo"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/iv_photo"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_13"
        android:maxLines="1"
        android:text="康福隆药品北门2店撒"
        android:textColor="#333333"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_photo"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/iv_photo"
        android:layout_toLeftOf="@+id/tv_distance"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:text="随时辅导费付付付过过过"
        android:textColor="#999999"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_fee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tv_name"
        android:layout_gravity="center_horizontal"
        android:layout_toRightOf="@id/tv_name"
        android:ellipsize="end"
        android:lines="1"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginLeft="@dimen/dp_13"
        android:text="128元"
        android:textColor="#FF3939"
        android:textSize="14sp"/>
    <TextView

        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_photo"
        android:layout_toLeftOf="@+id/image_select"
        android:text="1.5km"
        android:layout_marginEnd="@dimen/dp_23"
        android:textColor="#FF3939"
        android:textSize="12sp"/>
    <CheckBox
        android:id="@+id/image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/dp_27"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:button="@null"
        android:enabled="false"
        android:background="@drawable/pay_checkbox_selector"
        />
    <View
        android:layout_below="@+id/iv_photo"
        android:layout_marginTop="@dimen/dp_20"
        android:background="#eeeeee"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
</RelativeLayout>