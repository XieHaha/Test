<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="@dimen/dp_77"
    android:background="@color/primary_color">
    <RelativeLayout
        android:id="@+id/head_layout"
        android:layout_width="@dimen/dp_52"
        android:layout_height="@dimen/dp_52"
        android:layout_marginStart="@dimen/dp_22"
        android:layout_centerVertical="true"
        android:background="@mipmap/order_head_img_bg"
        >
        <com.keydom.ih_common.view.CircleImageView
            android:id="@+id/order_doctor_img"
            android:layout_width="@dimen/dp_45"
            android:layout_height="@dimen/dp_45"
            android:layout_marginStart="@dimen/dp_4"
            android:layout_marginTop="@dimen/dp_4"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/order_doctor_icon"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/order_doc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/head_layout"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_20"
        android:text="有点儿淡"
        android:maxWidth="@dimen/dp_100"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="@dimen/dp_15"
        android:textColor="#666666"/>
    <TextView
        android:id="@+id/order_card_num"
        android:layout_below="@+id/order_doc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/head_layout"
        android:layout_marginTop="@dimen/dp_7"
        android:layout_marginStart="@dimen/dp_20"
        android:text="就诊卡号：020000648095"
        android:textSize="@dimen/dp_12"
        android:textColor="#999999"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_f9f9f9"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>