<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color"
    android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:text="缴费详情"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/font_size_primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="姓名："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingRight="@dimen/dp_20"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="卡号："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/card_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingRight="@dimen/dp_20"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_20"
                    android:text="医院："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:id="@+id/hospital_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_15"
                    android:ellipsize="end"
                    android:lines="1"
                    android:paddingRight="@dimen/dp_20"
                    android:textColor="#666666"
                    android:textSize="@dimen/font_size_primary" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@mipmap/colorful_line" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F9F9F9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_10"
                android:text="导诊信息"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/font_size_primary" />

            <TextView
                android:id="@+id/hospitalization_guidance_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:paddingRight="@dimen/dp_20"
                android:textColor="#666666"
                android:textSize="@dimen/font_size_primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_20"
                android:background="#F9F9F9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_15"
                android:text="项目明细"
                android:textColor="#BBBBBB"
                android:textSize="@dimen/font_size_primary" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_marginTop="@dimen/dp_15"
                android:background="#F9F9F9" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/project_detail_rv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/dp_19"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"
                android:background="#F9F9F9" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/dp_48"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/all_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_20"
                    android:textColor="#FF3939"
                    android:textSize="@dimen/font_size_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/all_price_tv"
                    android:text="合计："
                    android:textColor="#999999"
                    android:textSize="@dimen/font_size_primary" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>