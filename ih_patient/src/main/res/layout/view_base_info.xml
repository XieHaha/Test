<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/encode_view"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="14dp"
            android:text="处方订单:"
            android:gravity="right"
            android:textColor="#999999"
            />
            <TextView
                android:id="@+id/tv_content"
                android:layout_toRightOf="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_26"
                android:textSize="14dp"
                android:text="1223445567788900777"
                android:textColor="#666666"
                />
        </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_patient_name"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="14dp"
            android:text="就诊人:"
            android:gravity="right"
            android:textColor="#999999"
            />
        <TextView
            android:id="@+id/tv_patient_content"
            android:layout_toRightOf="@+id/tv_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:textSize="14dp"
            android:text="执笔一副情画 男 24岁"
            android:textColor="#666666"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_records_name"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="14dp"
            android:text="门诊病历号:"
            android:gravity="right"
            android:textColor="#999999"
            />
        <TextView
            android:id="@+id/tv_records_content"
            android:layout_toRightOf="@+id/tv_records_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:textSize="14dp"
            android:text="12234455677889"
            android:textColor="#666666"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_department_name"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="14dp"
            android:text="科室:"
            android:gravity="right"
            android:textColor="#999999"
            />
        <TextView
            android:id="@+id/tv_department_content"
            android:layout_toRightOf="@+id/tv_department_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:textSize="14dp"
            android:text="消化内科"
            android:textColor="#666666"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_address"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="14dp"
            android:text="地址:"
            android:gravity="right"
            android:textColor="#999999"
            />
        <TextView
            android:id="@+id/tv_address_content"
            android:layout_toRightOf="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:textSize="14dp"
            android:text="成都市武侯区天府软件园C区11-22"
            android:textColor="#666666"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_first"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="14dp"
            android:text="初步诊断:"
            android:gravity="right"
            android:textColor="#999999"
            />
        <TextView
            android:id="@+id/tv_first_content"
            android:layout_toRightOf="@+id/tv_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:textSize="14dp"
            android:text="高血压高血压高血压"
            android:textColor="#666666"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_date"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="14dp"
            android:text="开方日期:"
            android:gravity="right"
            android:textColor="#999999"
            />
        <TextView
            android:id="@+id/tv_date_content"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:textSize="14dp"
            android:text="2019.04.23"
            android:textColor="#666666"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_state"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="14dp"
            android:text="处方状态:"
            android:gravity="right"
            android:textColor="#999999"
            />
        <TextView
            android:id="@+id/tv_state_content"
            android:layout_toRightOf="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:textSize="14dp"
            android:text="待发货"
            android:textColor="#666666"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_zx"
            android:layout_width="@dimen/dp_74"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:textSize="14dp"
            android:text="二维码:"
            android:gravity="right"
            android:textColor="#999999"
            />
        <ImageView
            android:layout_toRightOf="@+id/tv_zx"
            android:id="@+id/image_zx"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:textSize="14dp"
            android:src="@mipmap/icon_zxing"
            />
        <TextView
            android:id="@+id/tv_zx_sec"
            android:layout_toRightOf="@+id/image_zx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginTop="6dp"
            android:textSize="14dp"
            android:text="（向医院和药店提供可取药）"
            android:textColor="#999999"
            />
    </RelativeLayout>
    <View
        style="@style/CommonLines"
        android:layout_marginTop="@dimen/dp_26"

        />
</LinearLayout>
