<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color">
    <include layout="@layout/common_title_bar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:paddingLeft="@dimen/dp_20"
        android:text="记录详情"
        android:gravity="center_vertical"
        android:textSize="@dimen/font_size_primary"
        android:textColor="#BBBBBB"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="#EEEEEE"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="订单号:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary" />
        <TextView
            android:id="@+id/register_record_num_tv"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="2018-09-12（上午）"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="姓名:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_name_tv"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="2018-09-12（上午）"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="时间:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_time_tv"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="2018-09-12（上午）"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="科室:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_department_tv"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="儿科门诊"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="医生:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_doctor_tv"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="杨沛"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="就诊地点:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_address_tv"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="请于上午8:00-9:00到医院就诊"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_70"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="就诊序号:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_serial_number_tv"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="2018-09-12（上午）"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_70"
            android:gravity="right"
            android:layout_height="wrap_content"
            android:text="备注:"
            android:textColor="#BBBBBB"
            android:textSize="@dimen/font_size_primary"/>
        <TextView
            android:id="@+id/register_remark_tv"
            android:layout_marginStart="@dimen/dp_19"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_30"
            android:text="请于上午8:00-9:00到医院就诊"
            android:textColor="#666666"
            android:textSize="@dimen/font_size_primary"/>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@mipmap/colorful_line"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#F9F9F9"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:paddingLeft="@dimen/dp_20"
        android:text="温馨提示"

        android:textSize="@dimen/font_size_primary"
        android:textColor="#FF3939"/>
    <TextView
        android:id="@+id/hint_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_20"
        android:lineSpacingExtra="@dimen/dp_10"
        android:text="@string/registration_record_detail_notic"
        android:textSize="@dimen/font_size_primary"
        android:textColor="#999999"/>
</LinearLayout>