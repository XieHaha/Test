<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:paddingLeft="@dimen/padding_left_right_dp"
    android:paddingRight="@dimen/padding_left_right_dp"
    android:paddingTop="@dimen/dp_25"
    android:paddingBottom="@dimen/dp_25"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_primary"
        android:id="@+id/number_tv"
        android:textColor="@color/tab_nol_color"
        android:text="订单号："
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_primary"
        android:id="@+id/service_tv"
        android:textColor="@color/tab_nol_color"
        android:text="服务项目："
        android:layout_marginTop="@dimen/dp_12"
        android:layout_below="@id/number_tv"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_primary"
        android:id="@+id/service_num_tv"
        android:textColor="@color/tab_nol_color"
        android:text="服务次数："
        android:layout_below="@+id/service_tv"
        android:layout_marginTop="@dimen/dp_12"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_primary"
        android:id="@+id/cost_tv"
        android:textColor="@color/tab_nol_color"
        android:text="服务费用："
        android:layout_below="@+id/service_num_tv"
        android:layout_marginTop="@dimen/dp_12"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_primary"
        android:id="@+id/order_num"
        android:textColor="@color/color_333333"
        android:layout_alignBottom="@+id/number_tv"
        android:text="123123"
        android:layout_alignLeft="@+id/service"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_primary"
        android:id="@+id/service"
        android:textColor="@color/color_333333"
        android:layout_alignBottom="@+id/service_tv"
        android:layout_toRightOf="@+id/service_tv"
        android:text="123123"
        android:layout_marginStart="@dimen/dp_20"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_primary"
        android:id="@+id/service_num"
        android:textColor="@color/color_333333"
        android:layout_alignBottom="@+id/service_num_tv"
        android:layout_alignLeft="@+id/service"
        android:text="123123"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_primary"
        android:id="@+id/service_cost"
        android:textColor="@color/nursing_status_red"
        android:layout_alignBottom="@+id/cost_tv"
        android:layout_alignLeft="@+id/service"
        android:text="123"
        />

</RelativeLayout>
