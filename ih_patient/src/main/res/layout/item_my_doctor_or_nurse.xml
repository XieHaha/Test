<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:background="@drawable/item_line_bg_bottom_divider"
    android:paddingRight="@dimen/padding_left_right_dp"
    android:paddingLeft="@dimen/padding_left_right_dp"
    android:paddingTop="@dimen/dp_15"
    android:paddingBottom="@dimen/dp_13"
    android:layout_height="wrap_content">
    <com.keydom.ih_common.view.CircleImageView
        android:layout_width="@dimen/dp_58"
        android:id="@+id/head_img"
        android:src="@mipmap/im_default_head_image"
        android:layout_height="@dimen/dp_58" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:layout_toRightOf="@+id/head_img"
        android:layout_marginLeft="@dimen/dp_17"
        android:textSize="@dimen/font_size_auxiliary"
        android:textColor="@color/primary_font_color"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_auxiliary"
        android:textColor="@color/edit_hint_color"
        android:layout_toRightOf="@+id/name"
        android:id="@+id/department"
        android:layout_alignTop="@+id/name"
        android:layout_marginLeft="@dimen/dp_14"
        android:maxWidth="@dimen/dp_80"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_auxiliary"
        android:textColor="@color/edit_hint_color"
        android:layout_toRightOf="@+id/department"
        android:id="@+id/jobName"
        android:maxWidth="@dimen/dp_80"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_alignTop="@+id/name"
        android:layout_marginLeft="@dimen/dp_5"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message"
        android:layout_alignLeft="@+id/name"
        android:layout_below="@+id/department"
        android:layout_marginTop="@dimen/dp_16"
        android:textSize="@dimen/font_size_auxiliary"
        android:textColor="@color/title_bar_text_color"
        android:layout_toLeftOf="@+id/msg_num"
        android:layout_marginRight="@dimen/dp_26"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:layout_alignBottom="@+id/name"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/font_size_auxiliary"
        android:textColor="@color/edit_hint_color"
        />
    <TextView
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:gravity="center"
        android:id="@+id/msg_num"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/message"
        android:textSize="@dimen/dp_9"
        android:textColor="@color/white"
        android:background="@drawable/nursing_order_service_radius"
        />
</RelativeLayout>