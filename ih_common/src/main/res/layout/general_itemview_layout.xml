<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/left_img"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_centerVertical="true"
        />
    <RelativeLayout
        android:layout_toRightOf="@+id/left_img"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textSize="@dimen/sp_14"
            android:text="测试那"
            android:textColor="@color/fontColorPrimary"
            />
        <View
            android:id="@+id/item_redpoint_view"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:visibility="gone"
            android:layout_toRightOf="@+id/item_name_tv"
            android:background="@drawable/red_point_view_bg"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/right_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_12"
        android:layout_marginRight="@dimen/dp_21"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/item_descripe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_img"
        android:layout_marginRight="@dimen/dp_17"
        android:textSize="@dimen/font_size_auxiliary" />

</merge>