<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/left_img"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_20" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dp_14"
        android:layout_toRightOf="@+id/left_img">

        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="测试那"
            android:textColor="@color/fontColorPrimary"
            android:textSize="@dimen/sp_14" />

        <View
            android:id="@+id/item_redpoint_view"
            android:layout_width="@dimen/dp_8"
            android:layout_height="@dimen/dp_8"
            android:layout_toRightOf="@+id/item_name_tv"
            android:background="@drawable/red_point_view_bg"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/right_img"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_12"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_21" />

    <TextView
        android:id="@+id/item_descripe_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dp_17"
        android:layout_toLeftOf="@+id/right_img"
        android:textSize="@dimen/font_size_auxiliary" />

</merge>