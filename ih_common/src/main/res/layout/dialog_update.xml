<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="512dp"
    android:background="@mipmap/update_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/dialog_update_close_iv"
        android:layout_width="@dimen/dp_21"
        android:layout_height="@dimen/dp_51"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dp_28"
        android:layout_marginRight="@dimen/dp_9"
        android:src="@mipmap/ic_update_close" />


    <TextView
        android:id="@+id/dialog_update_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_145"
        android:background="@drawable/blue_1a9ded_corner_bg"
        android:gravity="center"
        android:paddingLeft="@dimen/dp_16"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_4"
        android:text="新版本：V1.0.0"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/dialog_update_content_tip_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_40"
        android:text="更新内容"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="@dimen/dp_24"
        android:paddingBottom="@dimen/dp_24">

        <TextView
            android:id="@+id/dialog_update_content_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_40"
            android:text="1.修复已知BUG"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
    </android.support.v4.widget.NestedScrollView>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_alignTop="@id/dialog_update_bottom_root_ll"

        android:background="@color/light_gray" />

    <LinearLayout
        android:id="@+id/dialog_update_bottom_root_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_55"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dialog_update_cancel_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="暂不更新"
            android:textColor="@color/fontColorDirection"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="@color/light_gray" />

        <TextView
            android:id="@+id/dialog_update_confirm_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>


</LinearLayout>