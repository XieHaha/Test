<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:background="@drawable/corner8_top_4076ff_bg"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="会诊申请"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18" />


        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/dp_40"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/fontColorPrimary"
            android:textSize="@dimen/sp_14"
            tools:text="签到成功，获得200积分" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginEnd="@dimen/dp_40"
            android:drawableStart="@mipmap/ic_user_follow_up"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:text="会诊理由"
            android:textColor="@color/fontColorPrimary"
            android:textSize="@dimen/sp_15" />

        <com.keydom.ih_common.view.JustifiedTextView
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_40"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/fontColorPrimary"
            android:textSize="@dimen/sp_12" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_20"
            android:background="#f3f3f3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_round_white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="拒绝"
                android:textColor="@color/fontColorPrimary"
                android:textSize="@dimen/sp_14" />

            <View
                android:id="@+id/view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f3f3f3" />

            <TextView
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="同意"
                android:textColor="@color/font_service_enable"
                android:textSize="@dimen/sp_14" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>