<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/padding_left_right_dp"
    android:paddingTop="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20">

    <com.keydom.ih_common.view.InterceptorEditText
        android:id="@+id/dialog_comment_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_37"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/dialog_comment_bt"
        android:background="@drawable/comment_input"
        android:hint="请输入评论内容..."
        android:paddingLeft="@dimen/dp_10"
        android:textColor="#808080"
        android:maxLength="255"
        android:textColorHint="#929292"
        android:textSize="@dimen/font_size_fuc" />

    <Button
        android:id="@+id/dialog_comment_bt"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_37"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:text="发布"
        android:textColor="@color/fontClickEnable"
        android:textSize="@dimen/font_size_fuc" />

</RelativeLayout>