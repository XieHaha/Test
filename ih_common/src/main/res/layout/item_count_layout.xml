<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/today_order_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/count_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_17"
            android:textColor="@color/fontColorPrimary"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:text="0" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/count_tv"
            android:layout_marginTop="@dimen/dp_14"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/count_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/fontClickEnable"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp_3"
                android:text="今日订单" />

            <View
                android:id="@+id/item_redpoint_view"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_7"
                android:layout_alignRight="@id/count_name"
                android:background="@drawable/red_point_view_bg"
                android:visibility="gone" />
        </RelativeLayout>


    </RelativeLayout>
</merge>