<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/im_bg">

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_refreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        app:srlAccentColor="@color/fontColorDirection"
        app:srlEnableLoadMore="false"
        app:srlEnableOverScrollDrag="false"
        app:srlEnablePreviewInEditMode="true"
        app:srlPrimaryColor="@color/fontColorPrimary">

        <com.keydom.ih_common.widget.BallPulseHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/im_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:scrollbars="none"
            android:overScrollMode="never"
            android:paddingBottom="@dimen/dp_10" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</FrameLayout>