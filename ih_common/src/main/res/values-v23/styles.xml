<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="BaseThemes" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">#f2f2f2</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimary">#FF4a91f4</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:listDivider">@drawable/recyclr_view_line_bg</item>
    </style>

    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>